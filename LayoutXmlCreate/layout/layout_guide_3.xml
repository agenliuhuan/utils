<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/guide3_radioImg"
        android:layout_width="520px"
        android:layout_height="520px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120px"
        android:src="@drawable/guide3_radio" />

    <ImageView
        android:id="@+id/guide3_handsharkImg"
        android:layout_width="520px"
        android:layout_height="520px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120px"
        android:src="@drawable/guide3_handshark"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/guide3_shark1Img"
        android:layout_width="163px"
        android:layout_height="99px"
        android:layout_marginLeft="290px"
        android:layout_marginTop="110px"
        android:src="@drawable/guide3_shark01"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/guide3_shark2Img"
        android:layout_width="132px"
        android:layout_height="93px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="220px"
        android:layout_marginTop="584px"
        android:src="@drawable/guide3_shark02"
        android:visibility="visible" />

    <TextView
        android:id="@+id/guide3_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guide3_radioImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78px"
        android:text="@string/activity_guide_text2_3"
        android:textColor="#ff6b5c"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/guide3_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guide3_tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24px"
        android:text="@string/activity_guide_text1_3"
        android:textColor="#8e8e8e"
        android:textSize="18sp" />

</RelativeLayout>