<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:minHeight="80dp"
    android:minWidth="225dp"
    android:orientation="horizontal" >

    <ProgressBar
        android:id="@+id/unified_loading_view_circle"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:indeterminate="false"
        android:indeterminateBehavior="cycle"
        android:indeterminateDrawable="@drawable/comm_loading_circle_drawable"
        android:indeterminateDuration="1"
        android:interpolator="@android:anim/accelerate_interpolator" />

    <TextView
        android:id="@+id/unified_loading_view_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="@string/default_unified_loading_text"
        android:textColor="#6f6f6f"
        android:textSize="15sp" />

</LinearLayout>