<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_message_sos_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:text="date"
        android:textColor="#d9d9d9"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="48px"
        android:layout_marginRight="48px"
        android:layout_marginTop="16px"
        android:background="@drawable/item_message_sos_contentbg"
        android:orientation="vertical"
        android:padding="18px" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/item_message_sos_user_img"
                android:layout_width="64px"
                android:layout_height="64px"
                android:src="@drawable/user_online" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24px"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_message_sos_contenttv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="content"
                    android:textColor="#6f6f6f"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_message_sos_adresstv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:text="content"
                    android:textColor="#d9d9d9"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_message_sos_contentimg"
            android:layout_width="match_parent"
            android:layout_height="212px"
            android:layout_marginTop="12px"
            android:scaleType="fitXY" />
    </LinearLayout>

</LinearLayout>