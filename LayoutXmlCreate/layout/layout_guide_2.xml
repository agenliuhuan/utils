<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/guide2_mapImg"
        android:layout_width="520px"
        android:layout_height="520px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120px"
        android:src="@drawable/guide2_map" />

    <ImageView
        android:id="@+id/guide2_girlImg"
        android:layout_width="195px"
        android:layout_height="229px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100px"
        android:layout_marginTop="64px"
        android:src="@drawable/guide2_girl"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/guide2_dunImg"
        android:layout_width="180px"
        android:layout_height="169px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80px"
        android:layout_marginTop="504px"
        android:src="@drawable/guide2_dun"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/guide2_boyImg"
        android:layout_width="184px"
        android:layout_height="326px"
        android:layout_marginLeft="100px"
        android:layout_marginTop="340px"
        android:src="@drawable/guide2_boy"
        android:visibility="visible" />

    <TextView
        android:id="@+id/guide2_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guide2_mapImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78px"
        android:text="@string/activity_guide_text2_2"
        android:textColor="#ff6b5c"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/guide2_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guide2_tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24px"
        android:text="@string/activity_guide_text1_2"
        android:textColor="#8e8e8e"
        android:textSize="18sp" />

</RelativeLayout>