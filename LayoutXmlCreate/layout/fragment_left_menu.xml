<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="452px" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/leftmenutopbg" />

                <ImageView
                    android:id="@+id/main_menu_bgimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/main_menu_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <FrameLayout
                    android:id="@+id/main_menu_user_img_fl"
                    android:layout_width="248px"
                    android:layout_height="248px"
                    android:layout_centerInParent="true"
                    android:background="@drawable/head_bg"
                    android:foreground="@drawable/headimg_foreground_selector" >

                    <ImageView
                        android:id="@+id/main_menu_user_img"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:layout_gravity="center"
                        android:src="@drawable/user_default_image" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:layout_width="48px"
                            android:layout_height="48px"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="24px"
                            android:layout_marginRight="24px"
                            android:background="@drawable/leftmenu_editimg" />
                    </RelativeLayout>
                </FrameLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="24px"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/main_menu_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/main_menu_message"
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:background="@drawable/on_item_selected" >

                <ImageView
                    android:id="@+id/main_menu_message_img"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="46px"
                    android:src="@drawable/icon_menu_msg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:layout_toRightOf="@id/main_menu_message_img"
                    android:gravity="center"
                    android:text="@string/sliding_menu_message"
                    android:textColor="#7e6866"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="46px"
                    android:src="@drawable/icon_leftmenu_go" />
            </RelativeLayout>

            <View
                android:id="@+id/message_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/main_menu_message"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:background="@color/comm_line_color" />

            <RelativeLayout
                android:id="@+id/main_menu_shake"
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_below="@id/message_line"
                android:background="@drawable/on_item_selected" >

                <ImageView
                    android:id="@+id/main_menu_shake_img"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="46px"
                    android:src="@drawable/icon_menu_shake" />

                <TextView
                    android:id="@+id/main_menu_shake_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:layout_toRightOf="@id/main_menu_shake_img"
                    android:gravity="center"
                    android:text="@string/sliding_menu_shake"
                    android:textColor="#7e6866"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="46px"
                    android:src="@drawable/icon_leftmenu_go" />
            </RelativeLayout>

            <View
                android:id="@+id/shake_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/main_menu_shake"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:background="@color/comm_line_color" />

            <RelativeLayout
                android:id="@+id/main_menu_setting"
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_below="@id/shake_line"
                android:background="@drawable/on_item_selected" >

                <ImageView
                    android:id="@+id/main_menu_setting_img"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="46px"
                    android:src="@drawable/icon_menu_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:layout_toRightOf="@id/main_menu_setting_img"
                    android:gravity="center"
                    android:text="@string/sliding_menu_setting"
                    android:textColor="#7e6866"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="46px"
                    android:src="@drawable/icon_leftmenu_go" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/guide_leftmenuRL"
                android:layout_width="420px"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_menu_message"
                android:layout_marginLeft="104px"
                android:layout_marginTop="76px"
                android:background="@drawable/guidebg"
                android:visibility="gone" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24px"
                        android:text="@string/sliding_menu_guidetext"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:id="@+id/close_leftmenuRl"
                        android:layout_width="80px"
                        android:layout_height="74px"
                        android:layout_alignParentRight="true"
                        android:clickable="true" >

                        <ImageView
                            android:layout_width="30px"
                            android:layout_height="30px"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10px"
                            android:layout_marginTop="10px"
                            android:background="@drawable/leftguide_close" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/setting_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/main_menu_setting"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:background="@color/comm_line_color" />

            <RelativeLayout
                android:id="@+id/main_menu_feedback"
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_below="@id/setting_line"
                android:background="@drawable/on_item_selected" >

                <ImageView
                    android:id="@+id/main_menu_feedback_img"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="46px"
                    android:src="@drawable/icon_menu_feedback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:layout_toRightOf="@id/main_menu_feedback_img"
                    android:gravity="center"
                    android:text="@string/activity_helper_feedback"
                    android:textColor="#7e6866"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/feedback_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/main_menu_feedback"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:background="@color/comm_line_color" />

            <Button
                android:id="@+id/main_menu_exitBtn"
                android:layout_width="match_parent"
                android:layout_height="94px"
                android:layout_below="@id/feedback_line"
                android:layout_marginLeft="46px"
                android:layout_marginRight="46px"
                android:layout_marginTop="30px"
                android:background="@drawable/btn_red_selector"
                android:text="@string/sliding_menu_exit"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_menu_close"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_alignParentRight="true"
        android:gravity="center" >

        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:background="@drawable/btn_leftmenuclose_selector" />
    </LinearLayout>

</RelativeLayout>