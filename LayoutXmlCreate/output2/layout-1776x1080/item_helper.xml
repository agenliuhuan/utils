<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">  
  <RelativeLayout android:layout_width="match_parent" android:layout_height="147px" android:background="#ffffff"> 
    <TextView android:id="@+id/item_helper_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginLeft="60px" android:layout_marginRight="150px" android:textColor="#333333" android:textSize="15sp"/>  
    <ImageView android:id="@+id/showOrHideImg" android:layout_width="60px" android:layout_height="60px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="57px" android:background="@drawable/icon_arrow_down"/> 
  </RelativeLayout>  
  <TextView android:id="@+id/item_helper_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#f2f2f2" android:gravity="left|top" android:padding="60px" android:textColor="#888888" android:textSize="12sp" android:visibility="gone"/> 
</LinearLayout>
