<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/activity_common_bg" android:orientation="vertical">  
  <include layout="@layout/comm_title_bar"/>  
  <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="102px" android:text="@string/activity_setphone_tip1" android:textColor="@color/white" android:textSize="12sp"/>  
  <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="15px" android:text="@string/activity_setphone_tip2" android:textColor="@color/white" android:textSize="12sp"/>  
  <RelativeLayout android:layout_width="match_parent" android:layout_height="144px" android:layout_marginLeft="81px" android:layout_marginRight="81px" android:layout_marginTop="72px"> 
    <EditText android:id="@+id/edt_setphone_phone" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/edt_general_normal" android:hint="@string/activity_register_1_edt_phone" android:inputType="number" android:paddingLeft="165px" android:textColor="@color/white" android:textColorHint="@color/white" android:textSize="15sp"> 
      <requestFocus/> 
    </EditText>  
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginLeft="30px" android:text="@string/activity_login_phone" android:textColor="@color/white" android:textSize="15sp"/>  
    <ImageView android:id="@+id/fogot_phone_clearimg" android:layout_width="57px" android:layout_height="57px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="30px" android:src="@drawable/edit_delete_icon"/> 
  </RelativeLayout>  
  <RelativeLayout android:layout_width="match_parent" android:layout_height="144px" android:layout_marginLeft="81px" android:layout_marginRight="81px" android:layout_marginTop="27px"> 
    <EditText android:id="@+id/edt_fogot_check" android:layout_width="525px" android:layout_height="match_parent" android:background="@drawable/edt_general_normal" android:hint="@string/activity_register_1_tv_tip_4" android:inputType="number" android:paddingLeft="240px" android:textColor="@color/white" android:textColorHint="@color/white" android:textSize="15sp"/>  
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginLeft="30px" android:text="@string/activity_register_1_edt_check" android:textColor="@color/white" android:textSize="15sp"/>  
    <Button android:id="@+id/setphone_resendBtn" android:layout_width="375px" android:layout_height="match_parent" android:layout_marginLeft="27px" android:layout_toRightOf="@+id/edt_fogot_check" android:background="@drawable/btn_red_selector" android:gravity="center" android:text="@string/activity_register_1_tv_send" android:textColor="@color/white" android:textSize="16sp"/> 
  </RelativeLayout>  
  <Button android:id="@+id/setphone_overBtn" android:layout_width="match_parent" android:layout_height="141px" android:layout_marginLeft="81px" android:layout_marginRight="81px" android:layout_marginTop="27px" android:background="@drawable/btn_red_selector" android:text="@string/activity_setphone_over" android:textColor="@color/white" android:textSize="19sp"/> 
</LinearLayout>
