<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="124px" android:orientation="horizontal">  
  <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/bpush_list_item_bg" android:orientation="horizontal"> 
    <ImageView android:id="@+id/bpush_media_list_img" android:layout_width="71px" android:layout_height="71px" android:layout_gravity="center_vertical" android:paddingLeft="5px"/>  
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:paddingLeft="21px">  
      <TextView android:id="@+id/bpush_media_list_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14px" android:ellipsize="end" android:singleLine="true" android:textColor="#000000" android:textSize="28px"/>  
      <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginBottom="14px" android:orientation="horizontal">  
        <TextView android:id="@+id/bpush_media_list_from_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:ellipsize="end" android:singleLine="true" android:textColor="#000000" android:textSize="17px"/>  
        <TextView android:id="@+id/bpush_media_list_time_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:ellipsize="end" android:paddingRight="8px" android:singleLine="true" android:textColor="#000000" android:textSize="17px"/> 
      </RelativeLayout> 
    </LinearLayout> 
  </LinearLayout> 
</LinearLayout>
