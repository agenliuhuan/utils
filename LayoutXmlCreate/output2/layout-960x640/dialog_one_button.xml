<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">  
  <LinearLayout android:layout_width="480px" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:background="@drawable/dialog_bg" android:orientation="vertical"> 
    <TextView android:id="@+id/txt_dialog_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="21px" android:gravity="center" android:lineSpacingExtra="4px" android:minHeight="115px" android:text="@string/dialog_title_tip" android:textColor="@color/dialog_content_color" android:textSize="16sp"/>  
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#ff6b5c"/>  
    <Button android:id="@+id/btn_dialog_confirm" android:layout_width="match_parent" android:layout_height="67px" android:layout_gravity="center_horizontal" android:background="@drawable/btn_dialog_bg_selector" android:gravity="center" android:text="@string/btn_confirm" android:textColor="@drawable/btn_dialog_textcolor" android:textSize="17sp"/> 
  </LinearLayout> 
</LinearLayout>
