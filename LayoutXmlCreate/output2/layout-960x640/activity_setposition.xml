<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@color/comm_activity_background">  
  <include android:id="@+id/titlebar_setposition" layout="@layout/comm_title_bar"/>  
  <RelativeLayout android:id="@+id/setpositionTopRL" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/titlebar_setposition" android:layout_marginLeft="14px" android:layout_marginRight="14px" android:layout_marginTop="23px"> 
    <Button android:id="@+id/btn_setposition" android:layout_width="106px" android:layout_height="65px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:background="@drawable/btn_red_selector" android:gravity="center" android:text="@string/activity_searchadd_btnsure" android:textColor="@color/white" android:textSize="@dimen/font_size_16"/>  
    <EditText android:id="@+id/edt_setposition" android:layout_width="match_parent" android:layout_height="65px" android:layout_centerHorizontal="true" android:layout_marginRight="14px" android:layout_toLeftOf="@+id/btn_setposition" android:background="@drawable/edt_general_withe" android:drawableLeft="@drawable/addfamily_edit_serch" android:drawablePadding="5px" android:hint="@string/activity_setposi_edithint" android:inputType="text" android:paddingLeft="17px" android:paddingRight="17px" android:textColorHint="#888888" android:textSize="@dimen/font_size_16"> 
      <requestFocus/> 
    </EditText> 
  </RelativeLayout>  
  <View android:id="@+id/set_position_line" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/setpositionTopRL" android:layout_marginTop="23px" android:background="@color/comm_line_color"/>  
  <ListView android:id="@+id/setposition_List" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/set_position_line" android:cacheColorHint="@android:color/transparent" android:divider="@color/transparent" android:dividerHeight="1px" android:fastScrollEnabled="true" android:headerDividersEnabled="true" android:listSelector="@drawable/on_item_selected" android:scrollbars="none" android:visibility="invisible"></ListView>  
  <LinearLayout android:id="@+id/historyLL" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/set_position_line" android:orientation="vertical" android:visibility="visible"> 
    <ListView android:id="@+id/history_List" android:layout_width="match_parent" android:layout_height="wrap_content" android:cacheColorHint="@android:color/transparent" android:divider="@color/transparent" android:dividerHeight="1px" android:fastScrollEnabled="true" android:headerDividersEnabled="true" android:listSelector="@drawable/on_item_selected" android:scrollbars="none"></ListView>  
    <TextView android:id="@+id/clearhistoryTV" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="28px" android:layout_marginTop="21px" android:text="@string/activity_setposi_cleartv" android:textColor="@drawable/mainfragment_bottomtextselector" android:textSize="19sp"/> 
  </LinearLayout> 
</RelativeLayout>
