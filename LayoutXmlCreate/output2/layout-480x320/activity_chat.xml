<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">  
  <include layout="@layout/comm_title_bar"/>  
  <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/chatrl_transparent_background"> 
    <RelativeLayout android:id="@+id/layout_main_chatinputRL" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:background="#ffffff" android:focusable="true" android:focusableInTouchMode="true"> 
      <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:fillViewport="true"> 
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"> 
          <RelativeLayout android:id="@+id/layout_main_chatinputtextRL" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="43px"> 
            <Button android:id="@+id/layout_main_chatinput_SendBtn" android:layout_width="49px" android:layout_height="27px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="9px" android:background="@drawable/btn_register_selector" android:gravity="center" android:text="@string/mainfragment_ChatSendText" android:textColor="@drawable/chatinput_voicebtn_text_selector" android:textSize="16sp"/>  
            <RelativeLayout android:layout_width="160px" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginRight="8px" android:layout_toLeftOf="@+id/layout_main_chatinput_SendBtn"> 
              <EditText android:id="@+id/layout_main_chatinput_edit" android:layout_width="160px" android:layout_height="wrap_content" android:background="@drawable/main_chatinput_editbg" android:maxLines="3" android:minHeight="27px"/>  
              <Button android:id="@+id/layout_main_chatinput_voiceBtn" android:layout_width="160px" android:layout_height="27px" android:background="@drawable/btn_register_selector" android:gravity="center" android:text="@string/mainfragment_ChatVoiceBtnText" android:textColor="@drawable/chatinput_voicebtn_text_selector" android:textSize="15sp" android:visibility="gone"/> 
            </RelativeLayout>  
            <Button android:id="@+id/layout_main_chatinput_ExpressionBtn" android:layout_width="32px" android:layout_height="32px" android:layout_centerVertical="true" android:layout_marginLeft="9px" android:background="@drawable/chatinput_express_selector"/>  
            <Button android:id="@+id/layout_main_chatinput_voicetextBtn" android:layout_width="32px" android:layout_height="32px" android:layout_centerVertical="true" android:layout_marginLeft="7px" android:layout_toRightOf="@+id/layout_main_chatinput_ExpressionBtn" android:background="@drawable/chatinput_voice_selector"/> 
          </RelativeLayout>  
          <!-- 表情图片 -->  
          <LinearLayout android:id="@+id/ll_face_container" android:layout_width="match_parent" android:layout_height="133px" android:layout_below="@+id/layout_main_chatinputtextRL" android:orientation="vertical" android:visibility="gone"> 
            <android.support.v4.view.ViewPager android:id="@+id/vPager" android:layout_width="match_parent" android:layout_height="wrap_content"/> 
          </LinearLayout> 
        </RelativeLayout> 
      </ScrollView> 
    </RelativeLayout>  
    <ListView android:id="@+id/layout_main_chatList" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/layout_main_chatinputRL" android:background="@drawable/common_activity_bg" android:cacheColorHint="@android:color/transparent" android:divider="@color/transparent" android:dividerHeight="8px" android:headerDividersEnabled="true" android:listSelector="@color/transparent" android:scrollbarStyle="outsideOverlay" android:scrollbars="none" android:transcriptMode="normal"/> 
  </RelativeLayout> 
</LinearLayout>
