<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/activity_common_bg" android:orientation="vertical">  
  <include android:id="@+id/layout_title" layout="@layout/comm_title_bar"/>  
  <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="30px" android:text="@string/activity_fogot_tip1" android:textColor="#d0ffffff" android:textSize="12sp"/>  
  <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="4px" android:text="@string/activity_fogot_tip2" android:textColor="#d0ffffff" android:textSize="12sp"/>  
  <RelativeLayout android:layout_width="match_parent" android:layout_height="36px" android:layout_marginLeft="24px" android:layout_marginRight="24px" android:layout_marginTop="21px"> 
    <EditText android:id="@+id/edt_fogot_phone" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/edt_general_normal" android:hint="@string/activity_register_1_edt_phone" android:inputType="number" android:paddingLeft="48px" android:textColor="@color/white" android:textColorHint="#80ffffff" android:textSize="15sp"> 
      <requestFocus/> 
    </EditText>  
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginLeft="8px" android:text="@string/activity_login_phone" android:textColor="@color/white" android:textSize="15sp"/>  
    <ImageView android:id="@+id/fogot_phone_clearimg" android:layout_width="16px" android:layout_height="16px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="8px" android:src="@drawable/edit_delete_icon" android:visibility="invisible"/> 
  </RelativeLayout>  
  <RelativeLayout android:layout_width="match_parent" android:layout_height="36px" android:layout_marginLeft="24px" android:layout_marginRight="24px" android:layout_marginTop="8px"> 
    <EditText android:id="@+id/edt_fogot_password" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/edt_general_normal" android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ" android:hint="@string/activity_register_1_tv_tip_3" android:inputType="textVisiblePassword" android:paddingLeft="48px" android:textColor="@color/white" android:textColorHint="#80ffffff" android:textSize="15sp"/>  
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginLeft="8px" android:text="@string/activity_login_password" android:textColor="@color/white" android:textSize="15sp"/>  
    <ImageView android:id="@+id/fogot_psd_clearimg" android:layout_width="16px" android:layout_height="16px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="8px" android:src="@drawable/edit_delete_icon" android:visibility="invisible"/> 
  </RelativeLayout>  
  <RelativeLayout android:layout_width="match_parent" android:layout_height="36px" android:layout_marginLeft="24px" android:layout_marginRight="24px" android:layout_marginTop="8px"> 
    <EditText android:id="@+id/edt_fogot_check" android:layout_width="155px" android:layout_height="match_parent" android:background="@drawable/edt_general_normal" android:hint="@string/activity_register_1_tv_tip_4" android:inputType="number" android:paddingLeft="71px" android:textColor="@color/white" android:textColorHint="#80ffffff" android:textSize="15sp"/>  
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginLeft="8px" android:text="@string/activity_register_1_edt_check" android:textColor="@color/white" android:textSize="15sp"/>  
    <Button android:id="@+id/fogot_resendBtn" android:layout_width="111px" android:layout_height="match_parent" android:layout_marginLeft="8px" android:layout_toRightOf="@+id/edt_fogot_check" android:background="@drawable/btn_red_selector" android:gravity="center" android:text="@string/activity_register_1_tv_send" android:textColor="@color/white" android:textSize="16sp"/> 
  </RelativeLayout> 
</LinearLayout>
