<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#ffffff" android:orientation="vertical">  
  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical"> 
    <include layout="@layout/comm_title_bar"/>  
    <GridView android:id="@+id/group_detail_grid" android:layout_width="wrap_content" android:layout_height="341px" android:layout_centerInParent="true" android:layout_margin="53px" android:gravity="center" android:horizontalSpacing="12px" android:listSelector="@color/transparent" android:numColumns="auto_fit" android:scrollbars="none" android:verticalSpacing="12px"/>  
    <View android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="25px" android:layout_marginRight="25px" android:background="@color/comm_line_color"/>  
    <RelativeLayout android:id="@+id/group_detail_nameRL" android:layout_width="match_parent" android:layout_height="136px"> 
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginLeft="57px" android:text="@string/activity_groupdetail_name" android:textColor="#6f6f6f" android:textSize="15sp"/>  
      <TextView android:id="@+id/group_detail_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="40px" android:textColor="#bfbfbf" android:textSize="15sp"/> 
    </RelativeLayout>  
    <View android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="25px" android:layout_marginRight="25px" android:background="@color/comm_line_color"/>  
    <Button android:id="@+id/group_detail_exitBtn" android:layout_width="match_parent" android:layout_height="87px" android:layout_gravity="center_horizontal" android:layout_marginLeft="57px" android:layout_marginRight="57px" android:layout_marginTop="285px" android:background="@drawable/btn_red_selector" android:gravity="center" android:text="@string/activity_groupdetail_eixt" android:textColor="@color/white" android:textSize="@dimen/font_size_18"/> 
  </LinearLayout> 
</RelativeLayout>
