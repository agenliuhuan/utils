<?xml version="1.0" encoding="UTF-8"?>

<com.umeng.socialize.view.wigets.KeyboardListenRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/umeng_socialize_share_root" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#D8DDE4">  
  <include android:id="@+id/umeng_socialize_share_titlebar" layout="@layout/umeng_socialize_titile_bar"/>  
  <RelativeLayout android:id="@+id/umeng_socialize_share_bottom_area" android:layout_width="fill_parent" android:layout_height="102px" android:layout_alignParentBottom="true" android:background="#EEEEEE" android:focusable="false" android:gravity="center_vertical"> 
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="85px" android:layout_centerVertical="true" android:id="@+id/umeng_socialize_follow_layout"> 
      <CheckBox android:id="@+id/umeng_socialize_follow_check" android:layout_width="wrap_content" android:layout_height="38px" android:layout_centerVertical="true" android:layout_marginLeft="42px" android:button="@drawable/umeng_socialize_follow_check" android:paddingLeft="53px" android:text="关注官方微博" android:textColor="@color/umeng_socialize_text_share_content" android:textSize="13sp" android:checked="true"/> 
    </RelativeLayout>  
    <RelativeLayout android:id="@+id/umeng_socialize_share_location" android:layout_width="85px" android:layout_height="85px" android:layout_centerVertical="true" android:layout_marginLeft="29px" android:layout_toRightOf="@id/umeng_socialize_follow_layout" android:gravity="center"> 
      <ImageButton android:id="@+id/umeng_socialize_location_ic" android:layout_width="81px" android:layout_height="49px" android:layout_centerVertical="true" android:background="@null" android:paddingLeft="7.5dp" android:paddingRight="7.5dp" android:scaleType="fitXY" android:src="@drawable/umeng_socialize_location_off" android:visibility="visible"/>  
      <ProgressBar android:id="@+id/umeng_socialize_location_progressbar" android:layout_width="32px" android:layout_height="32px" android:visibility="gone"/> 
    </RelativeLayout>  
    <ImageButton android:id="@+id/umeng_socialize_share_at" android:layout_width="85px" android:layout_height="85px" android:layout_centerVertical="true" android:layout_marginLeft="21px" android:layout_toRightOf="@id/umeng_socialize_share_location" android:background="@null" android:padding="17px" android:scaleType="fitXY" android:src="@drawable/umeng_socialize_at_button" android:visibility="visible"/>  
    <RelativeLayout android:layout_width="85px" android:layout_height="85px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="42px"> 
      <ImageView android:id="@+id/umeng_socialize_share_previewImg" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_margin="10px" android:scaleType="fitXY" android:visibility="gone"/>  
      <ImageView android:id="@+id/umeng_socialize_share_previewImg_remove" android:layout_width="27px" android:layout_height="27px" android:layout_alignParentRight="true" android:scaleType="fitXY" android:src="@drawable/umeng_socialize_x_button" android:visibility="gone"/>  
      <ProgressBar android:id="@+id/umeng_socialize_share_previewImg_progressbar" android:layout_width="32px" android:layout_height="32px" android:layout_centerInParent="true" android:visibility="gone"/> 
    </RelativeLayout> 
  </RelativeLayout>  
  <EditText android:id="@+id/umeng_socialize_share_edittext" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/umeng_socialize_share_bottom_area" android:layout_below="@id/umeng_socialize_share_titlebar" android:background="@color/umeng_socialize_list_item_bgcolor" android:bufferType="spannable" android:gravity="top" android:hint="@string/umeng_socialize_text_comment_hint" android:lineSpacingExtra="6px" android:paddingLeft="17px" android:paddingRight="8px" android:paddingTop="21px" android:textColor="@color/umeng_socialize_text_share_content"/>  
  <TextView android:id="@+id/umeng_socialize_share_word_num" android:layout_width="106px" android:layout_height="64px" android:layout_above="@id/umeng_socialize_share_bottom_area" android:layout_alignParentRight="true" android:layout_marginBottom="12px" android:layout_marginRight="17px" android:gravity="center" android:textColor="@color/umeng_socialize_text_share_content" android:textSize="18sp"/> 
</com.umeng.socialize.view.wigets.KeyboardListenRelativeLayout>
