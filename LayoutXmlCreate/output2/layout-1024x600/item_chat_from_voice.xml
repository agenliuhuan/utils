<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">  
  <TextView android:id="@+id/item_chat_date_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="10px" android:background="@drawable/message_date_bg" android:gravity="center" android:paddingBottom="8px" android:paddingLeft="25px" android:paddingRight="25px" android:paddingTop="8px" android:textColor="#ffffff" android:textSize="10sp"/>  
  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16px" android:gravity="center_vertical" android:orientation="horizontal"> 
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20px" android:gravity="center_horizontal" android:orientation="vertical"> 
      <ImageView android:id="@+id/item_chattovoice_userimg" android:layout_width="73px" android:layout_height="73px" android:src="@drawable/user_online"/>  
      <TextView android:id="@+id/txt_chat_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3px" android:layout_gravity="center_horizontal" android:ellipsize="end" android:singleLine="true" android:textColor="#595959" android:textSize="12sp" android:visibility="gone"/> 
    </LinearLayout>  
    <RelativeLayout android:id="@+id/item_chatvoice_voiceRL" android:layout_width="96px" android:layout_height="56px" android:layout_gravity="center_vertical" android:layout_marginLeft="6px" android:background="@drawable/chat_from_bg"> 
      <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"> 
        <ImageView android:id="@+id/item_chatvoice_voiceImg" android:layout_width="36px" android:layout_height="36px" android:layout_centerInParent="true" android:background="@drawable/chat_from_voice3"/> 
      </RelativeLayout> 
    </RelativeLayout>  
    <TextView android:id="@+id/item_chatvoice_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:layout_marginLeft="5px" android:textColor="#333333" android:textSize="12sp"/>  
    <ProgressBar android:id="@+id/pb_sending" android:layout_width="41px" android:layout_height="41px" android:layout_marginLeft="5px" android:visibility="visible"/> 
  </LinearLayout> 
</LinearLayout>
