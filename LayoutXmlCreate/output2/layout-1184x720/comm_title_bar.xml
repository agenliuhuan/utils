<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="96px">  
  <RelativeLayout android:id="@+id/title_all" android:layout_width="match_parent" android:layout_height="match_parent"> 
    <Button android:id="@+id/btn_title_lefttext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginLeft="24px" android:background="@color/transparent" android:gravity="center" android:textColor="@drawable/btn_text_color_selector" android:textSize="16sp" android:visibility="gone"/>  
    <Button android:id="@+id/btn_title_left" android:layout_width="54px" android:layout_height="54px" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginLeft="24px" android:background="@drawable/btn_titlebar_left_selector"/>  
    <TextView android:id="@+id/txt_title_center" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true" android:ellipsize="end" android:gravity="center" android:singleLine="true" android:textColor="@color/white" android:textSize="23sp"/>  
    <Button android:id="@+id/btn_title_right" android:layout_width="54px" android:layout_height="54px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="24px" android:background="@color/transparent" android:gravity="center" android:textColor="@drawable/btn_text_color_selector" android:textSize="16sp"/>  
    <Button android:id="@+id/btn_title_right2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="24px" android:background="@color/transparent" android:gravity="center" android:textColor="@drawable/btn_text_color_selector" android:textSize="16sp"/>  
    <TextView android:id="@+id/title_right_msgTV" android:layout_width="36px" android:layout_height="36px" android:layout_alignParentRight="true" android:layout_alignParentTop="true" android:layout_marginRight="10px" android:layout_marginTop="10px" android:background="@drawable/icon_menu_red_point" android:gravity="center" android:textColor="#ffffff" android:textSize="11sp" android:visibility="gone"/> 
  </RelativeLayout> 
</RelativeLayout>
