<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/activity_common_bg" android:orientation="vertical">  
  <include android:id="@+id/titlebar_register_3" layout="@layout/comm_title_bar"/>  
  <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@+id/titlebar_register_3" android:fillViewport="true"> 
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical"> 
      <RelativeLayout android:layout_width="248px" android:layout_height="248px" android:layout_gravity="center_horizontal" android:layout_marginTop="28px" android:background="@drawable/head_bg"> 
        <ImageView android:id="@+id/img_register_3_image" android:layout_width="200px" android:layout_height="200px" android:layout_centerInParent="true" android:src="@drawable/user_default_image"/> 
      </RelativeLayout>  
      <TextView android:id="@+id/tv_register_3_tip_2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="36px" android:gravity="center" android:text="@string/activity_register_3_tv_tip_2" android:textColor="#d0ffffff" android:textSize="13sp"/>  
      <LinearLayout android:id="@+id/register_3_choiceLL" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="74px" android:layout_marginTop="64px" android:orientation="horizontal"> 
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_register_3_choice" android:textColor="@color/white" android:textSize="15sp"/>  
        <RadioGroup android:id="@+id/register_radioGroup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="80px" android:orientation="horizontal"> 
          <RadioButton android:id="@+id/radioman" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/transparent" android:button="@null" android:checked="false" android:drawablePadding="15px" android:drawableRight="@drawable/radiobtn_register_selector" android:text="@string/activity_register_3_choiceman" android:textColor="@color/white" android:textSize="15sp"/>  
          <RadioButton android:id="@+id/radiowoman" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="80px" android:background="@color/transparent" android:button="@null" android:checked="true" android:drawablePadding="15px" android:drawableRight="@drawable/radiobtn_register_selector" android:text="@string/activity_register_3_choicewoman" android:textColor="@color/white" android:textSize="15sp"/> 
        </RadioGroup> 
      </LinearLayout>  
      <RelativeLayout android:layout_width="match_parent" android:layout_height="82px" android:layout_marginLeft="54px" android:layout_marginRight="54px" android:layout_marginTop="32px"> 
        <EditText android:id="@+id/edt_register_3_nickname" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/edt_general_normal" android:hint="@string/activity_register_3_edt_nickname" android:inputType="text" android:paddingLeft="20px" android:textColor="@color/white" android:textColorHint="#80ffffff" android:textSize="15sp"> 
          <requestFocus/> 
        </EditText>  
        <ImageView android:id="@+id/edt_register_3_nickname_clearImg" android:layout_width="38px" android:layout_height="38px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="20px" android:src="@drawable/edit_delete_icon" android:visibility="invisible"/> 
      </RelativeLayout>  
      <Button android:id="@+id/register_3_overBtn" android:layout_width="match_parent" android:layout_height="94px" android:layout_marginLeft="54px" android:layout_marginRight="54px" android:layout_marginTop="18px" android:background="@drawable/btn_red_selector" android:enabled="false" android:text="@string/activity_register_3_over" android:textColor="@color/white" android:textSize="19sp"/> 
    </LinearLayout> 
  </ScrollView>  
  <LinearLayout android:id="@+id/layout_register_3_bk" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentBottom="true" android:background="@color/comm_black_transparent_background" android:gravity="bottom|center_horizontal" android:onClick="onClick" android:orientation="vertical" android:visibility="gone"> 
    <LinearLayout android:id="@+id/layout_register_3_bk_view" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@color/white" android:gravity="center_horizontal" android:orientation="vertical"> 
      <TextView android:id="@+id/textView1" android:layout_width="fill_parent" android:layout_height="2px" android:background="@color/textview_green_text_color"/>  
      <TextView android:id="@+id/tv_image_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_gravity="center_horizontal" android:layout_marginTop="30px" android:text="@string/activity_register_3_image_tv_title" android:textColor="@color/setting_item_text_color" android:textSize="@dimen/font_size_17"/>  
      <Button android:id="@+id/btn_image_snapshot" android:layout_width="match_parent" android:layout_height="94px" android:layout_gravity="center_horizontal" android:layout_marginLeft="54px" android:layout_marginRight="54px" android:layout_marginTop="34px" android:background="@drawable/btn_red_selector" android:text="@string/activity_register_3_image_btn_snapshot" android:textColor="@color/white" android:textSize="@dimen/font_size_18"/>  
      <Button android:id="@+id/btn_image_album" android:layout_width="match_parent" android:layout_height="94px" android:layout_gravity="center_horizontal" android:layout_marginLeft="54px" android:layout_marginRight="54px" android:layout_marginTop="34px" android:background="@drawable/btn_red_selector" android:text="@string/activity_register_3_image_btn_album" android:textColor="@color/white" android:textSize="@dimen/font_size_18"/>  
      <Button android:id="@+id/btn_image_cancel" android:layout_width="match_parent" android:layout_height="94px" android:layout_gravity="center_horizontal" android:layout_marginBottom="32px" android:layout_marginLeft="54px" android:layout_marginRight="54px" android:layout_marginTop="24px" android:background="@drawable/btn_register_selector" android:text="@string/activity_register_3_image_btn_cancel" android:textColor="#fe5b49" android:textSize="@dimen/font_size_18"/> 
    </LinearLayout> 
  </LinearLayout> 
</RelativeLayout>
