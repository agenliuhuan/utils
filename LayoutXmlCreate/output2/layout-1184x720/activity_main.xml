<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/fragment_main" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/comm_activity_background" android:orientation="vertical">  
  <LinearLayout android:id="@+id/main_bottomLL" android:layout_width="match_parent" android:layout_height="96px" android:layout_alignParentBottom="true" android:orientation="horizontal"> 
    <LinearLayout android:id="@+id/main_bottom_mapLL" android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:orientation="vertical"> 
      <ImageView android:id="@+id/main_bottom_mapimg" android:layout_width="54px" android:layout_height="54px" android:background="@drawable/mainbottom_map_selector"/>  
      <TextView android:id="@+id/main_bottom_maptext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_main_map" android:textColor="@drawable/mainfragment_bottomtextselector" android:textSize="12sp"/> 
    </LinearLayout>  
    <RelativeLayout android:id="@+id/main_bottom_chatRL" android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1"> 
      <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical"> 
        <ImageView android:id="@+id/main_bottom_chatimg" android:layout_width="54px" android:layout_height="54px" android:background="@drawable/mainbottom_chat_selector"/>  
        <TextView android:id="@+id/main_bottom_chattext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_main_chat" android:textColor="@drawable/mainfragment_bottomtextselector" android:textSize="12sp"/> 
      </LinearLayout>  
      <TextView android:id="@+id/main_bottom_chat_msgTV" android:layout_width="36px" android:layout_height="36px" android:layout_alignParentRight="true" android:layout_alignParentTop="true" android:layout_marginRight="80px" android:layout_marginTop="10px" android:background="@drawable/icon_menu_red_point" android:gravity="center" android:textColor="#ffffff" android:textSize="11sp" android:visibility="gone"/> 
    </RelativeLayout>  
    <LinearLayout android:id="@+id/main_bottom_starttripLL" android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:orientation="vertical"> 
      <ImageView android:id="@+id/main_bottom_tripimg" android:layout_width="54px" android:layout_height="54px" android:background="@drawable/mainbottom_trip_selector"/>  
      <TextView android:id="@+id/main_bottom_triptext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_main_trip" android:textColor="@drawable/mainfragment_bottomtextselector" android:textSize="12sp"/> 
    </LinearLayout> 
  </LinearLayout>  
  <FrameLayout android:id="@+id/layout_main_content" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/main_bottomLL"></FrameLayout>  
  <RelativeLayout android:id="@+id/layout_main_guide" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#cc000000" android:visibility="gone"> 
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:background="@drawable/dialog_bg" android:orientation="vertical"> 
      <RelativeLayout android:layout_width="440px" android:layout_height="440px" android:layout_gravity="center_horizontal" android:layout_margin="78px"> 
        <ImageView android:id="@+id/roadImg" android:layout_width="440px" android:layout_height="440px" android:background="@drawable/mainguide_road" android:visibility="invisible"/>  
        <ImageView android:id="@+id/goal" android:layout_width="67px" android:layout_height="107px" android:layout_alignParentRight="true" android:layout_marginTop="24px" android:background="@drawable/mainguide_goal" android:visibility="invisible"/>  
        <ImageView android:id="@+id/oh" android:layout_width="67px" android:layout_height="108px" android:layout_marginLeft="78px" android:layout_marginTop="88px" android:background="@drawable/mainguide_oh" android:visibility="invisible"/>  
        <ImageView android:id="@+id/what" android:layout_width="67px" android:layout_height="108px" android:layout_marginLeft="78px" android:layout_marginTop="88px" android:background="@drawable/mainguide_what" android:visibility="invisible"/>  
        <ImageView android:id="@+id/foot" android:layout_width="440px" android:layout_height="440px" android:background="@anim/main_guide_foot_anim" android:visibility="invisible"/>  
        <ImageView android:id="@+id/ok" android:layout_width="440px" android:layout_height="440px" android:background="@drawable/mainguide_ok" android:visibility="invisible"/>  
        <ImageView android:id="@+id/text1" android:layout_width="234px" android:layout_height="182px" android:layout_alignParentBottom="true" android:background="@drawable/mainguide_text1" android:visibility="invisible"/>  
        <ImageView android:id="@+id/text2" android:layout_width="174px" android:layout_height="136px" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:background="@drawable/mainguide_text2" android:visibility="invisible"/> 
      </RelativeLayout>  
      <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="98px" android:layout_marginRight="98px" android:gravity="center" android:text="@string/main_guide_text_info" android:textColor="#6f6f6f" android:textSize="13sp"/>  
      <View android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="78px" android:background="#ff6b5c"/>  
      <Button android:id="@+id/layout_main_guide_knowBtn" android:layout_width="match_parent" android:layout_height="76px" android:layout_gravity="center_horizontal" android:background="@drawable/btn_dialog_bg_selector" android:gravity="center" android:text="@string/btn_confirm" android:textColor="@drawable/btn_dialog_textcolor" android:textSize="17sp"/> 
    </LinearLayout> 
  </RelativeLayout> 
</RelativeLayout>
