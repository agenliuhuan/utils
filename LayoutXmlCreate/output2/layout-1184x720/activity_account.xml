<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#ffffff" android:orientation="vertical">  
  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical"> 
    <RelativeLayout android:id="@+id/layout_account_image" android:layout_width="match_parent" android:layout_height="452px"> 
      <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"> 
        <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/leftmenutopbg"/>  
        <ImageView android:id="@+id/layout_account_bgimg" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/> 
      </FrameLayout>  
      <include layout="@layout/comm_title_bar"/>  
      <RelativeLayout android:id="@+id/img_account_imageRL" android:layout_width="248px" android:layout_height="248px" android:layout_centerInParent="true" android:background="@drawable/head_bg"> 
        <ImageView android:id="@+id/img_account_image" android:layout_width="200px" android:layout_height="200px" android:layout_centerInParent="true" android:src="@drawable/user_default_image"/>  
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"> 
          <ImageView android:layout_width="50px" android:layout_height="50px" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:layout_marginBottom="24px" android:layout_marginRight="24px" android:background="@drawable/leftmenu_editimg"/> 
        </RelativeLayout> 
      </RelativeLayout> 
    </RelativeLayout>  
    <RelativeLayout android:id="@+id/layout_account_phone" android:layout_width="match_parent" android:layout_height="128px"> 
      <ImageView android:id="@+id/img_account_phone" android:layout_width="40px" android:layout_height="40px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="38px" android:src="@drawable/account_next_img" android:visibility="invisible"/>  
      <TextView android:id="@+id/account_phoneTV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginLeft="54px" android:text="@string/activity_account_tv_phone" android:textColor="#6f6f6f" android:textSize="15sp"/>  
      <TextView android:id="@+id/tv_account_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="38px" android:textColor="#bfbfbf" android:textSize="15sp"/> 
    </RelativeLayout>  
    <View android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="24px" android:layout_marginRight="24px" android:background="@color/comm_line_color"/>  
    <RelativeLayout android:id="@+id/layout_account_nickname" android:layout_width="match_parent" android:layout_height="128px" android:background="@drawable/on_item_selected"> 
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginLeft="54px" android:text="@string/activity_account_tv_nickname" android:textColor="#6f6f6f" android:textSize="15sp"/>  
      <TextView android:id="@+id/tv_account_nickname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="38px" android:textColor="#6f6f6f" android:textSize="15sp"/> 
    </RelativeLayout>  
    <View android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="24px" android:layout_marginRight="24px" android:background="@color/comm_line_color"/>  
    <RelativeLayout android:id="@+id/layout_account_sex" android:layout_width="match_parent" android:layout_height="128px" android:background="@drawable/on_item_selected"> 
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginLeft="54px" android:text="@string/activity_account_tv_sex" android:textColor="#6f6f6f" android:textSize="15sp"/>  
      <TextView android:id="@+id/tv_account_sex" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="38px" android:textColor="#6f6f6f" android:textSize="15sp"/> 
    </RelativeLayout>  
    <View android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="24px" android:layout_marginRight="24px" android:background="@color/comm_line_color"/>  
    <RelativeLayout android:id="@+id/layout_account_newpassword" android:layout_width="match_parent" android:layout_height="128px" android:background="@drawable/on_item_selected"> 
      <ImageView android:id="@+id/img_account_newpassword" android:layout_width="40px" android:layout_height="40px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="38px" android:src="@drawable/account_next_img"/>  
      <TextView android:id="@+id/tv_account_newpassword" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginLeft="54px" android:text="@string/activity_account_tv_password" android:textColor="#6f6f6f" android:textSize="15sp"/> 
    </RelativeLayout>  
    <View android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="24px" android:layout_marginRight="24px" android:background="@color/comm_line_color"/> 
  </LinearLayout>  
  <LinearLayout android:id="@+id/layout_account_image_pop" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentBottom="true" android:background="@color/comm_black_transparent_background" android:gravity="bottom|center_horizontal" android:onClick="onClick" android:orientation="vertical" android:visibility="gone"> 
    <LinearLayout android:id="@+id/layout_account_image_pop_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/white" android:gravity="center_horizontal" android:orientation="vertical"> 
      <Button android:id="@+id/btn_account_image_snapshot" android:layout_width="match_parent" android:layout_height="94px" android:layout_gravity="center_horizontal" android:layout_marginLeft="54px" android:layout_marginRight="54px" android:layout_marginTop="34px" android:background="@drawable/btn_red_selector" android:text="@string/activity_account_btn_image_snapshot" android:textColor="@color/white" android:textSize="@dimen/font_size_18"/>  
      <Button android:id="@+id/btn_account_image_album" android:layout_width="match_parent" android:layout_height="94px" android:layout_gravity="center_horizontal" android:layout_marginLeft="54px" android:layout_marginRight="54px" android:layout_marginTop="24px" android:background="@drawable/btn_red_selector" android:text="@string/activity_account_btn_image_album" android:textColor="@color/white" android:textSize="@dimen/font_size_18"/>  
      <Button android:id="@+id/btn_account_image_cancel" android:layout_width="match_parent" android:layout_height="94px" android:layout_gravity="center_horizontal" android:layout_marginBottom="32px" android:layout_marginLeft="54px" android:layout_marginRight="54px" android:layout_marginTop="24px" android:background="@drawable/btn_register_selector" android:text="@string/activity_account_btn_image_cancel" android:textColor="#fe5b49" android:textSize="@dimen/font_size_18"/> 
    </LinearLayout> 
  </LinearLayout> 
</RelativeLayout>
