<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="100px" android:layout_centerHorizontal="true">  
  <LinearLayout android:id="@+id/escort_LL" android:layout_width="wrap_content" android:layout_height="100px" android:background="@drawable/listitem_image_bg" android:gravity="center" android:orientation="horizontal"> 
    <RelativeLayout android:id="@+id/escort_contactRL" android:layout_width="100px" android:layout_height="100px"> 
      <ImageView android:id="@+id/escort_contact_img" android:layout_width="86px" android:layout_height="86px" android:layout_centerInParent="true" android:src="@drawable/listitem_default_img"/>  
      <TextView android:id="@+id/escort_contact_name" android:layout_width="86px" android:layout_height="32px" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:layout_marginBottom="6px" android:background="@drawable/itemcontact_namebg" android:gravity="center" android:singleLine="true" android:textColor="#667769" android:textSize="12sp"/>  
      <ImageView android:id="@+id/escort_contact_status_img" android:layout_width="24px" android:layout_height="24px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="7px" android:src="@drawable/listitem_contactstatus_inline"/>  
      <ImageView android:id="@+id/escort_contact_escortImg" android:layout_width="100px" android:layout_height="100px" android:layout_centerInParent="true" android:background="@drawable/listitem_protecting" android:visibility="gone"/> 
    </RelativeLayout>  
    <ImageView android:id="@+id/escort_call_img" android:layout_width="60px" android:layout_height="60px" android:layout_marginLeft="12px" android:layout_marginRight="24px" android:background="@drawable/escort_phone_selector" android:visibility="gone"/> 
  </LinearLayout> 
</RelativeLayout>
