<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">  
  <TextView android:id="@+id/item_chat_date_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="19px" android:background="@drawable/message_date_bg" android:gravity="center" android:paddingBottom="16px" android:paddingLeft="48px" android:paddingRight="48px" android:paddingTop="16px" android:textColor="#ffffff" android:textSize="10sp"/>  
  <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="32px"> 
    <LinearLayout android:id="@+id/layout_chat_userimg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_marginRight="38px" android:gravity="center_horizontal" android:orientation="vertical"> 
      <ImageView android:id="@+id/item_chattovoice_userimg" android:layout_width="140px" android:layout_height="140px" android:src="@drawable/user_online"/>  
      <TextView android:id="@+id/txt_chat_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="6px" android:ellipsize="end" android:singleLine="true" android:textColor="#595959" android:textSize="12sp" android:visibility="gone"/> 
    </LinearLayout>  
    <RelativeLayout android:id="@+id/item_chatvoice_voiceRL" android:layout_width="185px" android:layout_height="108px" android:layout_centerVertical="true" android:layout_marginRight="12px" android:layout_toLeftOf="@+id/layout_chat_userimg" android:background="@drawable/chat_to_bg"> 
      <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"> 
        <ImageView android:id="@+id/item_chatvoice_voiceImg" android:layout_width="70px" android:layout_height="70px" android:layout_centerInParent="true" android:background="@drawable/chat_to_voice3"/> 
      </RelativeLayout> 
    </RelativeLayout>  
    <TextView android:id="@+id/item_chatvoice_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginRight="9px" android:layout_toLeftOf="@id/item_chatvoice_voiceRL" android:textColor="#333333" android:textSize="12sp"/>  
    <ProgressBar android:id="@+id/pb_sending" android:layout_width="80px" android:layout_height="80px" android:layout_centerVertical="true" android:layout_marginLeft="320px" android:layout_marginRight="9px" android:layout_toLeftOf="@id/item_chatvoice_duration" android:visibility="visible"/> 
  </RelativeLayout> 
</LinearLayout>
