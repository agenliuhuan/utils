<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/on_item_selected" android:orientation="vertical">  
  <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="38px" android:layout_marginLeft="86px" android:layout_marginRight="51px" android:layout_marginTop="38px" android:orientation="horizontal"> 
    <ImageView android:id="@+id/img_sos_pois_call" android:layout_width="118px" android:layout_height="118px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:src="@drawable/mainfragment_phoneclick"/>  
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@id/img_sos_pois_call" android:orientation="vertical"> 
      <TextView android:id="@+id/txt_sos_pois_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:text="南山科技园警务室" android:textColor="#6f6f6f" android:textSize="15sp"/>  
      <TextView android:id="@+id/txt_sos_pois_address" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16px" android:gravity="center_vertical" android:lines="2" android:text="广东省深圳市南山区高新科技园南十二路曙光大厦" android:textColor="#b5b5b5" android:textSize="12sp"/>  
      <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16px" android:orientation="horizontal"> 
        <TextView android:id="@+id/txt_sos_pois_distance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="238米" android:textColor="#ff6b5c" android:textSize="12sp"/>  
        <TextView android:id="@+id/txt_sos_pois_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="70px" android:text="0755-86592534" android:textColor="#ff6b5c" android:textSize="15sp"/> 
      </LinearLayout> 
    </LinearLayout> 
  </RelativeLayout> 
</LinearLayout>
