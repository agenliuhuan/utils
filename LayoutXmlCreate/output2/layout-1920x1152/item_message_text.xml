<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">  
  <TextView android:id="@+id/item_message_text_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="80px" android:text="date" android:textColor="#d9d9d9" android:textSize="12sp"/>  
  <RelativeLayout android:layout_width="match_parent" android:layout_height="156px" android:layout_marginBottom="38px" android:layout_marginLeft="76px" android:layout_marginRight="76px" android:layout_marginTop="38px" android:background="#ffffff" android:orientation="horizontal"> 
    <ImageView android:id="@+id/item_message_text_image" android:layout_width="102px" android:layout_height="102px" android:layout_centerVertical="true" android:layout_marginLeft="38px" android:src="@drawable/listitem_default_img"/>  
    <Button android:id="@+id/item_message_text_agreeBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="38px" android:background="@drawable/btn_red_selector" android:padding="16px" android:text="@string/activity_message_agree" android:textColor="#ffffff" android:textSize="12sp" android:visibility="gone"/>  
    <TextView android:id="@+id/item_message_text_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginLeft="38px" android:layout_marginRight="38px" android:layout_toLeftOf="@+id/item_message_text_agreeBtn" android:layout_toRightOf="@+id/item_message_text_image" android:text="" android:textColor="#6f6f6f" android:textSize="15sp"/> 
  </RelativeLayout> 
</LinearLayout>
