<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="224px" android:orientation="horizontal">  
  <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/bpush_list_item_bg" android:orientation="horizontal"> 
    <ImageView android:id="@+id/bpush_media_list_img" android:layout_width="128px" android:layout_height="128px" android:layout_gravity="center_vertical" android:paddingLeft="9px"/>  
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:paddingLeft="38px">  
      <TextView android:id="@+id/bpush_media_list_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25px" android:ellipsize="end" android:singleLine="true" android:textColor="#000000" android:textSize="51px"/>  
      <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginBottom="25px" android:orientation="horizontal">  
        <TextView android:id="@+id/bpush_media_list_from_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:ellipsize="end" android:singleLine="true" android:textColor="#000000" android:textSize="32px"/>  
        <TextView android:id="@+id/bpush_media_list_time_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:ellipsize="end" android:paddingRight="16px" android:singleLine="true" android:textColor="#000000" android:textSize="32px"/> 
      </RelativeLayout> 
    </LinearLayout> 
  </LinearLayout> 
</LinearLayout>
