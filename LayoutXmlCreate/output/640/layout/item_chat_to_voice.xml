<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">  
  <TextView android:id="@+id/item_chat_date_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="10px" android:background="@drawable/message_date_bg" android:gravity="center" android:paddingBottom="8px" android:paddingLeft="26px" android:paddingRight="26px" android:paddingTop="8px" android:textColor="#595959" android:textSize="11sp"/>  
  <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="17px"> 
    <LinearLayout android:id="@+id/layout_chat_userimg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_marginRight="10px" android:gravity="center_horizontal" android:orientation="vertical"> 
      <ImageView android:id="@+id/item_chattovoice_userimg" android:layout_width="81px" android:layout_height="81px" android:src="@drawable/icon_family"/>  
      <TextView android:id="@+id/txt_chat_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3px" android:ellipsize="end" android:singleLine="true" android:textColor="#595959" android:textSize="12sp" android:visibility="gone"/> 
    </LinearLayout>  
    <RelativeLayout android:id="@+id/item_chatvoice_voiceRL" android:layout_width="103px" android:layout_height="60px" android:layout_centerVertical="true" android:layout_marginRight="7px" android:layout_toLeftOf="@+id/layout_chat_userimg" android:background="@drawable/chat_to_bg"> 
      <ImageView android:id="@+id/item_chatvoice_voiceImg" android:layout_width="39px" android:layout_height="39px" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:layout_marginRight="17px" android:background="@drawable/chat_to_voice3"/> 
    </RelativeLayout>  
    <TextView android:id="@+id/item_chatvoice_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginRight="5px" android:layout_toLeftOf="@id/item_chatvoice_voiceRL" android:textColor="#333333" android:textSize="12sp"/>  
    <ProgressBar android:id="@+id/pb_sending" android:layout_width="44px" android:layout_height="44px" android:layout_centerVertical="true" android:layout_marginLeft="177px" android:layout_marginRight="5px" android:layout_toLeftOf="@id/item_chatvoice_duration" android:visibility="visible"/> 
  </RelativeLayout> 
</LinearLayout>
