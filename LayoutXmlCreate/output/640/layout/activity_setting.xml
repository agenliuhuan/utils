<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#ffffff">  
  <include android:id="@+id/setting_title" layout="@layout/comm_title_bar"/>  
  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/setting_title" android:orientation="vertical"> 
    <RelativeLayout android:layout_width="match_parent" android:layout_height="202px"> 
      <LinearLayout android:layout_width="414px" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginLeft="35px" android:orientation="vertical"> 
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fragment_setting_tv_hide_title" android:textColor="#333333" android:textSize="15sp"/>  
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="23px" android:text="@string/fragment_setting_tv_hide_content" android:textColor="#888888" android:textSize="12sp"/> 
      </LinearLayout>  
      <CheckBox android:id="@+id/checkbox_setting_hide" android:layout_width="88px" android:layout_height="48px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="32px" android:button="@drawable/hide_check_selector"/> 
    </RelativeLayout>  
    <View android:layout_width="match_parent" android:layout_height="10px" android:background="#dbdbdb"/>  
    <RelativeLayout android:id="@+id/layout_setting_guide" android:layout_width="match_parent" android:layout_height="87px" android:layout_gravity="center_horizontal" android:background="@drawable/on_item_selected"> 
      <ImageView android:id="@+id/img_setting_guide" android:layout_width="39px" android:layout_height="39px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="23px" android:src="@drawable/account_next_img"/>  
      <TextView android:id="@+id/tv_setting_guide" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginLeft="26px" android:text="@string/fragment_setting_tv_guide" android:textColor="#333333" android:textSize="15sp"/> 
    </RelativeLayout>  
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#dbdbdb"/>  
    <RelativeLayout android:id="@+id/layout_setting_compro" android:layout_width="match_parent" android:layout_height="87px" android:background="@drawable/on_item_selected"> 
      <ImageView android:id="@+id/img_setting_compro" android:layout_width="39px" android:layout_height="39px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="23px" android:src="@drawable/account_next_img"/>  
      <TextView android:id="@+id/tv_setting_compro" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginLeft="26px" android:text="@string/activity_helper_common" android:textColor="#333333" android:textSize="15sp"/> 
    </RelativeLayout>  
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#dbdbdb"/>  
    <RelativeLayout android:id="@+id/layout_setting_update" android:layout_width="match_parent" android:layout_height="87px" android:background="@drawable/on_item_selected"> 
      <ImageView android:id="@+id/img_setting_update" android:layout_width="39px" android:layout_height="39px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="23px" android:src="@drawable/account_next_img"/>  
      <TextView android:id="@+id/tv_setting_update" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginLeft="26px" android:text="@string/fragment_setting_tv_update" android:textColor="#333333" android:textSize="15sp"/>  
      <TextView android:id="@+id/tv_version" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginRight="5px" android:layout_toLeftOf="@+id/img_setting_update" android:textColor="#888888" android:textSize="12sp"/>  
      <ImageView android:id="@+id/img_version" android:layout_width="58px" android:layout_height="26px" android:layout_centerVertical="true" android:layout_toRightOf="@+id/tv_setting_update" android:src="@drawable/img_new"/> 
    </RelativeLayout>  
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#dbdbdb"/>  
    <Button android:id="@+id/layout_setting_exitfamilyBtn" android:layout_width="536px" android:layout_height="72px" android:layout_gravity="center_horizontal" android:layout_marginTop="53px" android:background="@drawable/btn_red_selector" android:text="@string/fragment_setting_btn_exit" android:textColor="@color/white" android:textSize="20sp"/> 
  </LinearLayout>  
  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_marginBottom="35px" android:orientation="vertical"> 
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_horizontal" android:orientation="horizontal"> 
      <TextView android:id="@+id/layout_setting_copyrights" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fragment_setting_copyright1" android:textColor="#050BFA" android:textSize="12sp"/>  
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="17px" android:text="@string/fragment_setting_copyright2" android:textColor="#608188" android:textSize="12sp" android:visibility="gone"/> 
    </LinearLayout>  
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="19px" android:gravity="center_horizontal" android:orientation="vertical"> 
      <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_horizontal" android:text="@string/fragment_setting_copyright2" android:textColor="#a4b0b4" android:textSize="10sp"/>  
      <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_horizontal" android:text="@string/fragment_setting_copyright3" android:textColor="#a4b0b4" android:textSize="10sp"/> 
    </LinearLayout> 
  </LinearLayout> 
</RelativeLayout>
