<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">  
  <RelativeLayout android:id="@+id/map_sos_window_infoRL" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:background="@drawable/map_infowindow_bg" android:minWidth="540px"> 
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical"> 
      <TextView android:id="@+id/map_sos_window_location" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8px" android:text="@string/fragment_setting_tv_guide" android:textColor="#333333" android:textSize="15sp"/>  
      <TextView android:id="@+id/map_sos_window_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4px" android:singleLine="true" android:text="@string/fragment_setting_tv_guide" android:textColor="#888888" android:textSize="13sp"/> 
    </LinearLayout> 
  </RelativeLayout>  
  <RelativeLayout android:id="@+id/map_sos_window_peopleRL" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"> 
    <ImageView android:id="@+id/map_sos_window_peopleimg" android:layout_width="111px" android:layout_height="111px" android:scaleType="center" android:src="@drawable/sos_mapcenter_img"/> 
  </RelativeLayout> 
</LinearLayout>
