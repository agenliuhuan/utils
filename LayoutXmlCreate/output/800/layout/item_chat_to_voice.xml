<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">  
  <TextView android:id="@+id/item_chat_date_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="13px" android:background="@drawable/message_date_bg" android:gravity="center" android:paddingBottom="11px" android:paddingLeft="33px" android:paddingRight="33px" android:paddingTop="11px" android:textColor="#595959" android:textSize="11sp"/>  
  <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="22px"> 
    <LinearLayout android:id="@+id/layout_chat_userimg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_marginRight="13px" android:gravity="center_horizontal" android:orientation="vertical"> 
      <ImageView android:id="@+id/item_chattovoice_userimg" android:layout_width="102px" android:layout_height="102px" android:src="@drawable/icon_family"/>  
      <TextView android:id="@+id/txt_chat_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4px" android:ellipsize="end" android:singleLine="true" android:textColor="#595959" android:textSize="12sp" android:visibility="gone"/> 
    </LinearLayout>  
    <RelativeLayout android:id="@+id/item_chatvoice_voiceRL" android:layout_width="128px" android:layout_height="75px" android:layout_centerVertical="true" android:layout_marginRight="8px" android:layout_toLeftOf="@+id/layout_chat_userimg" android:background="@drawable/chat_to_bg"> 
      <ImageView android:id="@+id/item_chatvoice_voiceImg" android:layout_width="48px" android:layout_height="48px" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:layout_marginRight="22px" android:background="@drawable/chat_to_voice3"/> 
    </RelativeLayout>  
    <TextView android:id="@+id/item_chatvoice_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginRight="6px" android:layout_toLeftOf="@id/item_chatvoice_voiceRL" android:textColor="#333333" android:textSize="12sp"/>  
    <ProgressBar android:id="@+id/pb_sending" android:layout_width="55px" android:layout_height="55px" android:layout_centerVertical="true" android:layout_marginLeft="222px" android:layout_marginRight="6px" android:layout_toLeftOf="@id/item_chatvoice_duration" android:visibility="visible"/> 
  </RelativeLayout> 
</LinearLayout>
