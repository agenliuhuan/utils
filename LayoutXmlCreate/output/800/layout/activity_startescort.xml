<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">  
  <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/white" android:orientation="vertical"> 
    <include android:id="@+id/titlebar_startescort" layout="@layout/comm_title_bar"/>  
    <RelativeLayout android:layout_width="match_parent" android:layout_height="633px"> 
      <FrameLayout android:id="@+id/startescort_map" android:layout_width="match_parent" android:layout_height="match_parent"/> 
    </RelativeLayout>  
    <TextView android:layout_width="match_parent" android:layout_height="1px" android:background="#D1D1D1"/>  
    <LinearLayout android:layout_width="match_parent" android:layout_height="64px" android:background="#fe9a0b" android:gravity="center_vertical"> 
      <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="35px" android:layout_marginRight="35px" android:text="@string/activity_startescort_sendtiptext" android:textColor="#ffffff" android:textSize="12sp"/> 
    </LinearLayout>  
    <GridView android:id="@+id/startescort_familiesGrid" android:layout_width="fill_parent" android:layout_height="250px" android:layout_marginLeft="35px" android:layout_marginRight="35px" android:layout_marginTop="28px" android:listSelector="@color/transparent" android:numColumns="5" android:scrollbars="none" android:verticalSpacing="13px"></GridView>  
    <LinearLayout android:layout_width="671px" android:layout_height="0px" android:layout_gravity="center_horizontal" android:layout_weight="1" android:gravity="center_vertical"> 
      <Button android:id="@+id/startescort_startBtn" android:layout_width="671px" android:layout_height="91px" android:background="@drawable/btn_blue_selector" android:gravity="center" android:text="@string/activity_startescort_sendBtntext" android:textColor="@color/white" android:textSize="20sp"/> 
    </LinearLayout> 
  </LinearLayout>  
  <RelativeLayout android:id="@+id/startescort_guide" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#cc000000" android:visibility="gone"> 
    <ImageView android:layout_width="146px" android:layout_height="146px" android:layout_marginLeft="26px" android:layout_marginTop="820px" android:background="@drawable/startguide_allbtn"/>  
    <ImageView android:layout_width="146px" android:layout_height="146px" android:layout_marginLeft="173px" android:layout_marginTop="820px" android:background="@drawable/startguide_onebtn"/>  
    <ImageView android:layout_width="537px" android:layout_height="397px" android:layout_marginLeft="108px" android:layout_marginTop="422px" android:background="@drawable/startguide_text"/>  
    <Button android:id="@+id/startescort_guide_knowBtn" android:layout_width="248px" android:layout_height="76px" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:layout_marginBottom="108px" android:background="@drawable/btn_guide_selector"/> 
  </RelativeLayout> 
</RelativeLayout>
