<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#ffffff" android:orientation="vertical">  
  <include android:id="@+id/layout_account_title" layout="@layout/comm_title_bar"/>  
  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/layout_account_title" android:orientation="vertical"> 
    <RelativeLayout android:id="@+id/layout_account_image" android:layout_width="match_parent" android:layout_height="208px" android:background="@drawable/account_head_bg"> 
      <RelativeLayout android:id="@+id/img_account_imageRL" android:layout_width="107px" android:layout_height="107px" android:layout_centerHorizontal="true" android:layout_marginTop="37px" android:background="@drawable/account_headimg_bg"> 
        <ImageView android:id="@+id/img_account_image" android:layout_width="104px" android:layout_height="104px" android:layout_centerInParent="true" android:src="@drawable/account_headimg_user"/>  
        <ImageView android:layout_width="25px" android:layout_height="25px" android:layout_marginLeft="79px" android:layout_marginTop="82px" android:background="@drawable/leftmenu_editimg"/> 
      </RelativeLayout>  
      <TextView android:id="@+id/tv_account_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/img_account_imageRL" android:layout_centerHorizontal="true" android:layout_marginTop="9px" android:text="@string/activity_account_tv_image" android:textColor="#ffffff" android:textSize="18sp"/> 
    </RelativeLayout>  
    <RelativeLayout android:layout_width="match_parent" android:layout_height="49px" android:layout_marginTop="19px"> 
      <ImageView android:id="@+id/img_account_nickname" android:layout_width="22px" android:layout_height="22px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="19px" android:src="@drawable/account_next_img" android:visibility="invisible"/>  
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginLeft="20px" android:text="@string/activity_account_tv_phone" android:textColor="#333333" android:textSize="15sp"/>  
      <TextView android:id="@+id/tv_account_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginRight="3px" android:layout_toLeftOf="@id/img_account_nickname" android:textColor="#888888" android:textSize="12sp"/> 
    </RelativeLayout>  
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#dbdbdb"/>  
    <RelativeLayout android:id="@+id/layout_account_nickname" android:layout_width="match_parent" android:layout_height="49px" android:background="@drawable/on_item_selected"> 
      <ImageView android:id="@+id/img_account_nickname" android:layout_width="22px" android:layout_height="22px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="19px" android:src="@drawable/account_next_img"/>  
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginLeft="20px" android:text="@string/activity_account_tv_nickname" android:textColor="#333333" android:textSize="15sp"/>  
      <TextView android:id="@+id/tv_account_nickname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginRight="3px" android:layout_toLeftOf="@id/img_account_nickname" android:textColor="#888888" android:textSize="12sp"/> 
    </RelativeLayout>  
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#dbdbdb"/>  
    <RelativeLayout android:id="@+id/layout_account_sex" android:layout_width="match_parent" android:layout_height="49px" android:background="@drawable/on_item_selected"> 
      <ImageView android:id="@+id/img_account_sex" android:layout_width="22px" android:layout_height="22px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="19px" android:src="@drawable/account_next_img"/>  
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginLeft="20px" android:text="@string/activity_account_tv_sex" android:textColor="#333333" android:textSize="15sp"/>  
      <TextView android:id="@+id/tv_account_sex" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginRight="3px" android:layout_toLeftOf="@id/img_account_sex" android:textColor="#888888" android:textSize="12sp"/> 
    </RelativeLayout>  
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#dbdbdb"/>  
    <RelativeLayout android:id="@+id/layout_account_newpassword" android:layout_width="match_parent" android:layout_height="49px" android:background="@drawable/on_item_selected"> 
      <ImageView android:id="@+id/img_account_newpassword" android:layout_width="22px" android:layout_height="22px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="19px" android:src="@drawable/account_next_img"/>  
      <TextView android:id="@+id/tv_account_newpassword" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginLeft="20px" android:text="@string/activity_account_tv_password" android:textColor="#333333" android:textSize="15sp"/> 
    </RelativeLayout>  
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#dbdbdb"/> 
  </LinearLayout>  
  <LinearLayout android:id="@+id/layout_account_image_pop" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentBottom="true" android:background="@color/comm_black_transparent_background" android:gravity="bottom|center_horizontal" android:onClick="onClick" android:orientation="vertical" android:visibility="gone"> 
    <LinearLayout android:id="@+id/layout_account_image_pop_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/white" android:gravity="center_horizontal" android:orientation="vertical"> 
      <TextView android:id="@+id/textView1" android:layout_width="fill_parent" android:layout_height="1px" android:background="@color/textview_green_text_color"/>  
      <TextView android:id="@+id/tv_account_image_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="15px" android:text="@string/activity_account_tv_image_title" android:textColor="@color/setting_item_text_color" android:textSize="@dimen/font_size_17"/>  
      <Button android:id="@+id/btn_account_image_snapshot" android:layout_width="302px" android:layout_height="41px" android:layout_gravity="center_horizontal" android:layout_marginTop="15px" android:background="@drawable/btn_login_selector" android:text="@string/activity_account_btn_image_snapshot" android:textColor="@color/white" android:textSize="@dimen/font_size_18"/>  
      <Button android:id="@+id/btn_account_image_album" android:layout_width="302px" android:layout_height="41px" android:layout_gravity="center_horizontal" android:layout_marginTop="15px" android:background="@drawable/btn_login_selector" android:text="@string/activity_account_btn_image_album" android:textColor="@color/white" android:textSize="@dimen/font_size_18"/>  
      <Button android:id="@+id/btn_account_image_cancel" android:layout_width="302px" android:layout_height="41px" android:layout_gravity="center_horizontal" android:layout_marginBottom="15px" android:layout_marginTop="15px" android:background="@drawable/btn_register_selector" android:text="@string/activity_account_btn_image_cancel" android:textColor="#0c92df" android:textSize="@dimen/font_size_18"/> 
    </LinearLayout> 
  </LinearLayout> 
</RelativeLayout>
