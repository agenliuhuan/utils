<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/comm_activity_background" android:orientation="vertical">  
  <include android:id="@+id/titlebar_phone_2" layout="@layout/comm_title_bar"/>  
  <RelativeLayout android:layout_width="450px" android:layout_height="60px" android:layout_gravity="center_horizontal" android:layout_marginTop="17px"> 
    <EditText android:id="@+id/edt_phone_2_check" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/edt_general_normal" android:hint="@string/activity_phone_2_edt_check" android:inputType="number" android:paddingLeft="24px" android:textColor="#0ee38a" android:textColorHint="#c7c7c7" android:textSize="@dimen/font_size_17"> 
      <requestFocus/> 
    </EditText>  
    <ImageView android:id="@+id/register_password_img" android:layout_width="38px" android:layout_height="38px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="8px" android:background="@drawable/register_edit_imgbg_selector"/> 
  </RelativeLayout>  
  <TextView android:id="@+id/tv_phone_2_tip_1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="53px" android:layout_marginRight="53px" android:layout_marginTop="19px" android:text="@string/activity_phone_2_tv_tip_1" android:textColor="@color/setting_item_text_color" android:textSize="@dimen/font_size_14"/>  
  <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="53px" android:layout_marginRight="53px" android:layout_marginTop="5px" android:gravity="center_vertical"> 
    <TextView android:id="@+id/tv_phone_2_tip_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:text="@string/activity_phone_2_tv_tip_2" android:textColor="@color/setting_item_text_color" android:textSize="@dimen/font_size_14"/>  
    <Button android:id="@+id/btn_phone_2_resend" android:layout_width="90px" android:layout_height="40px" android:layout_toRightOf="@id/tv_phone_2_tip_2" android:background="@drawable/btn_resend_selector" android:text="@string/activity_phone_2_tv_resend" android:textColor="@color/white" android:textSize="@dimen/font_size_15"/> 
  </RelativeLayout>  
  <Button android:id="@+id/btn_phone_2_conform" android:layout_width="450px" android:layout_height="68px" android:layout_gravity="center_horizontal" android:layout_marginTop="16px" android:background="@drawable/btn_green_selector" android:text="@string/titlebar_button_tip_over" android:textColor="@color/white" android:textSize="@dimen/font_size_18"/> 
</LinearLayout>
