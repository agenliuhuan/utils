<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">  
  <RelativeLayout android:id="@+id/map_peopleinfo_window_infoRL" android:layout_width="324px" android:layout_height="78px" android:layout_gravity="center_horizontal" android:background="@drawable/map_infowindow_bg"> 
    <Button android:id="@+id/map_peopleinfo_window_refreshBtn" android:layout_width="30px" android:layout_height="30px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="5px" android:background="@drawable/map_info_window_refreshbg"/>  
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="10px" android:layout_toLeftOf="@+id/btn_info_window_refresh" android:orientation="vertical"> 
      <TextView android:id="@+id/map_peopleinfo_window_location" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5px" android:singleLine="true" android:text="@string/fragment_setting_tv_guide" android:textColor="#333333" android:textSize="15sp"/>  
      <TextView android:id="@+id/map_peopleinfo_window_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2px" android:singleLine="true" android:text="@string/fragment_setting_tv_guide" android:textColor="#888888" android:textSize="13sp"/> 
    </LinearLayout> 
  </RelativeLayout>  
  <RelativeLayout android:id="@+id/map_peopleinfo_window_peopleRL" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"> 
    <ImageView android:id="@+id/map_peopleinfo_window_peopleimg" android:layout_width="53px" android:layout_height="68px" android:background="@drawable/map_people_selector" android:scaleType="fitStart" android:src="@drawable/icon_family"/> 
  </RelativeLayout> 
</LinearLayout>
