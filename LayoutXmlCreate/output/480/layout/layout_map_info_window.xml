<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">  
  <RelativeLayout android:layout_width="324px" android:layout_height="wrap_content" android:background="@drawable/map_infowindow_bg"> 
    <Button android:id="@+id/btn_info_window_refresh" android:layout_width="37px" android:layout_height="37px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="5px" android:background="@drawable/map_info_window_refreshbg"/>  
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10px" android:layout_toLeftOf="@+id/btn_info_window_refresh" android:orientation="vertical"> 
      <TextView android:id="@+id/tv_info_window_location" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5px" android:maxLines="2" android:textColor="#333333" android:textSize="15sp"/>  
      <TextView android:id="@+id/tv_info_window_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2px" android:singleLine="true" android:textColor="#888888" android:textSize="13sp"/> 
    </LinearLayout> 
  </RelativeLayout> 
</LinearLayout>
