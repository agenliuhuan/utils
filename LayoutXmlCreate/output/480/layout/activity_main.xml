<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/fragment_main" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/comm_activity_background" android:orientation="vertical">  
  <include android:id="@+id/layout_main_title" layout="@layout/comm_title_bar" android:visibility="visible"/>  
  <FrameLayout android:id="@+id/layout_main_map" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/layout_main_title"/>  
  <LinearLayout android:id="@+id/layout_main_familyLL" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/layout_main_title" android:orientation="vertical"> 
    <Button android:id="@+id/layout_main_showfamilyBtn" android:layout_width="72px" android:layout_height="72px" android:layout_marginLeft="13px" android:layout_marginTop="13px" android:background="@drawable/mainfragment_up_btn"/>  
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13px" android:orientation="vertical"> 
      <LinearLayout android:id="@+id/layout_main_familyListLL" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4px" android:orientation="vertical" android:visibility="visible"> 
        <ListView android:id="@+id/layout_main_familyList" android:layout_width="80px" android:layout_height="6px" android:cacheColorHint="@android:color/transparent" android:divider="@color/transparent" android:dividerHeight="2px" android:fastScrollEnabled="true" android:headerDividersEnabled="true" android:listSelector="@color/transparent" android:scrollbars="none"/>  
        <Button android:id="@+id/layout_main_addfamilyBtn" android:layout_width="72px" android:layout_height="72px" android:layout_marginTop="4px" android:background="@drawable/mainfragment_addfamily_btn"/>  
        <Button android:id="@+id/layout_main_editfamilyBtn" android:layout_width="72px" android:layout_height="72px" android:layout_marginTop="4px" android:background="@drawable/mainfragment_editfamily_btn"/> 
      </LinearLayout> 
    </LinearLayout> 
  </LinearLayout>  
  <LinearLayout android:id="@+id/mainfragment_bottomLL" android:layout_width="match_parent" android:layout_height="65px" android:layout_alignParentBottom="true" android:orientation="horizontal" android:visibility="gone"> 
    <LinearLayout android:id="@+id/mainfragment_bottomChatLL" android:layout_width="164px" android:layout_height="match_parent" android:background="@drawable/mainfragment_bottomllbg" android:gravity="center" android:orientation="horizontal"> 
      <ImageView android:layout_width="46px" android:layout_height="46px" android:background="@drawable/mainfragment_bottomchatimg_selector"/>  
      <TextView android:id="@+id/txt_mainfragment_location" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12px" android:text="@string/mainfragment_chatTV" android:textColor="@drawable/mainfragment_bottomtextselector" android:textSize="20sp"/> 
    </LinearLayout>  
    <View android:layout_width="1px" android:layout_height="match_parent" android:background="#cccccc"/>  
    <LinearLayout android:id="@+id/mainfragment_bottomPhoneLL" android:layout_width="164px" android:layout_height="match_parent" android:background="@drawable/mainfragment_bottomllbg" android:gravity="center" android:orientation="horizontal"> 
      <ImageView android:layout_width="46px" android:layout_height="46px" android:background="@drawable/mainfragment_bottomphoneimg_selector"/>  
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12px" android:text="@string/mainfragment_phoneTV" android:textColor="@drawable/mainfragment_bottomtextselector" android:textSize="20sp"/> 
    </LinearLayout>  
    <LinearLayout android:layout_width="152px" android:layout_height="match_parent" android:background="@drawable/mainfragment_arcbg" android:orientation="horizontal"></LinearLayout> 
  </LinearLayout>  
  <RelativeLayout android:id="@+id/mainfragment_escortRL" android:layout_width="126px" android:layout_height="126px" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:layout_marginBottom="10px" android:layout_marginRight="12px"> 
    <ImageView android:id="@+id/mainfragment_escortanim_img" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/mainfragment_escortbg"/>  
    <ImageView android:id="@+id/mainfragment_escortext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:background="@drawable/mainfragment_escorttext"/> 
  </RelativeLayout>  
  <Button android:id="@+id/mainfragment_myLocationBtn" android:layout_width="44px" android:layout_height="44px" android:layout_above="@+id/mainfragment_escortRL" android:layout_alignParentRight="true" android:layout_marginBottom="28px" android:layout_marginRight="20px" android:background="@drawable/icon_mylocation"/>  
  <RelativeLayout android:id="@+id/layout_main_chatRL" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/layout_main_title" android:background="@color/chatrl_transparent_background" android:visibility="gone"> 
    <RelativeLayout android:id="@+id/layout_main_chatTopRL" android:layout_width="match_parent" android:layout_height="52px"> 
      <TextView android:id="@+id/layout_main_chatTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:text="@string/mainfragment_ChatTopTitleText" android:textColor="#595959" android:textSize="12sp"/>  
      <Button android:id="@+id/layout_main_chatRLColseBtn" android:layout_width="44px" android:layout_height="44px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="8px" android:background="@drawable/icon_chatclose"/> 
    </RelativeLayout>  
    <RelativeLayout android:id="@+id/layout_main_chatinputRL" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:background="#ffffff" android:focusable="true" android:focusableInTouchMode="true"> 
      <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:fillViewport="true"> 
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"> 
          <RelativeLayout android:id="@+id/layout_main_chatinputtextRL" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="65px"> 
            <Button android:id="@+id/layout_main_chatinput_SendBtn" android:layout_width="74px" android:layout_height="41px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="14px" android:background="@drawable/mainchatinput_voice_selector" android:gravity="center" android:text="@string/mainfragment_ChatSendText" android:textColor="@drawable/chatinput_voicebtn_text_selector" android:textSize="16sp"/>  
            <RelativeLayout android:layout_width="240px" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginRight="13px" android:layout_toLeftOf="@+id/layout_main_chatinput_SendBtn"> 
              <EditText android:id="@+id/layout_main_chatinput_edit" android:layout_width="240px" android:layout_height="wrap_content" android:background="@drawable/main_chatinput_editbg" android:maxLines="3" android:minHeight="41px"/>  
              <Button android:id="@+id/layout_main_chatinput_voiceBtn" android:layout_width="240px" android:layout_height="41px" android:background="@drawable/mainchatinput_voice_selector" android:gravity="center" android:text="@string/mainfragment_ChatVoiceBtnText" android:textColor="@drawable/chatinput_voicebtn_text_selector" android:textSize="15sp" android:visibility="gone"/> 
            </RelativeLayout>  
            <Button android:id="@+id/layout_main_chatinput_ExpressionBtn" android:layout_width="49px" android:layout_height="49px" android:layout_centerVertical="true" android:layout_marginLeft="14px" android:background="@drawable/chatinput_express_selector"/>  
            <Button android:id="@+id/layout_main_chatinput_voicetextBtn" android:layout_width="49px" android:layout_height="49px" android:layout_centerVertical="true" android:layout_marginLeft="10px" android:layout_toRightOf="@+id/layout_main_chatinput_ExpressionBtn" android:background="@drawable/chatinput_voice_selector"/> 
          </RelativeLayout>  
          <!-- 表情图片 -->  
          <LinearLayout android:id="@+id/ll_face_container" android:layout_width="match_parent" android:layout_height="200px" android:layout_below="@+id/layout_main_chatinputtextRL" android:orientation="vertical" android:visibility="gone"> 
            <android.support.v4.view.ViewPager android:id="@+id/vPager" android:layout_width="match_parent" android:layout_height="wrap_content"/> 
          </LinearLayout> 
        </RelativeLayout> 
      </ScrollView> 
    </RelativeLayout>  
    <ListView android:id="@+id/layout_main_chatList" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/layout_main_chatinputRL" android:layout_below="@+id/layout_main_chatTopRL" android:background="#20000000" android:cacheColorHint="@android:color/transparent" android:divider="@color/transparent" android:dividerHeight="13px" android:headerDividersEnabled="true" android:listSelector="@color/transparent" android:scrollbarStyle="outsideOverlay" android:scrollbars="none" android:transcriptMode="normal"/> 
  </RelativeLayout>  
  <RelativeLayout android:id="@+id/layout_main_guide" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#cc000000" android:visibility="gone"> 
    <ImageView android:layout_width="82px" android:layout_height="82px" android:layout_marginLeft="6px" android:layout_marginTop="160px" android:background="@drawable/mainguide_addbtn"/>  
    <ImageView android:layout_width="338px" android:layout_height="72px" android:layout_marginLeft="76px" android:layout_marginTop="189px" android:background="@drawable/mainguide_addtext"/>  
    <ImageView android:layout_width="145px" android:layout_height="145px" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:background="@drawable/mainguide_escortbtn"/>  
    <ImageView android:layout_width="305px" android:layout_height="96px" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:layout_marginBottom="145px" android:layout_marginRight="63px" android:background="@drawable/mainguide_escorttext"/>  
    <Button android:id="@+id/layout_main_guide_knowBtn" android:layout_width="149px" android:layout_height="46px" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:layout_marginBottom="65px" android:background="@drawable/btn_guide_selector"/> 
  </RelativeLayout> 
</RelativeLayout>
