<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@color/comm_activity_background" android:orientation="vertical">  
  <include android:id="@+id/titlebar_addfamily" layout="@layout/comm_title_bar"/>  
  <RelativeLayout android:id="@+id/editRl" android:layout_width="match_parent" android:layout_height="90px" android:layout_below="@+id/titlebar_addfamily"> 
    <EditText android:id="@+id/et_addfamily" android:layout_width="477px" android:layout_height="54px" android:layout_centerVertical="true" android:layout_margin="15px" android:layout_toLeftOf="@+id/addfamily_clear_tv" android:background="@drawable/edit_general_selector" android:drawableLeft="@drawable/addfamily_edit_serch" android:drawablePadding="7px" android:gravity="center_vertical" android:hint="@string/activity_addfamily_edit_tip" android:paddingLeft="7px" android:textSize="16sp"></EditText>  
    <Button android:id="@+id/addfamily_clearBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginRight="30px" android:layout_toLeftOf="@+id/addfamily_clear_tv" android:background="@drawable/addfamily_clear_selector" android:visibility="gone"/>  
    <TextView android:id="@+id/addfamily_clear_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="15px" android:clickable="true" android:text="@string/activity_addfamily_clear_text" android:textColor="@color/listitem_name_text_color" android:textSize="@dimen/font_size_15" android:visibility="gone"/> 
  </RelativeLayout>  
  <View android:id="@+id/addfamily_line" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/editRl" android:background="@color/comm_line_color"/>  
  <ListView android:id="@+id/lv_addfamily" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/addfamily_line" android:background="@color/transparent" android:cacheColorHint="@android:color/transparent" android:divider="@color/comm_line_color" android:dividerHeight="1px" android:fastScrollEnabled="true" android:headerDividersEnabled="true" android:listSelector="@color/transparent" android:scrollbars="none"></ListView>  
  <RelativeLayout android:id="@+id/noContactsRL" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/addfamily_line" android:background="@color/transparent" android:visibility="gone"> 
    <TextView android:id="@+id/nocontactTV" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15px" android:gravity="center_horizontal" android:text="@string/activity_addfamily_nocontact_text1" android:textColor="@color/listitem_name_text_color" android:textSize="@dimen/font_size_13"/>  
    <Button android:id="@+id/noContacts_SendBtn" android:layout_width="453px" android:layout_height="61px" android:layout_below="@+id/nocontactTV" android:layout_centerHorizontal="true" android:layout_marginTop="22px" android:background="@drawable/btn_login_selector" android:text="@string/btn_confirm" android:textColor="@color/white" android:textSize="@dimen/font_size_18" android:visibility="gone"/> 
  </RelativeLayout>  
  <RelativeLayout android:id="@+id/coverlv_addfamily" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/addfamily_line" android:background="@color/comm_black_transparent_background" android:clickable="true" android:visibility="gone"></RelativeLayout> 
</RelativeLayout>
