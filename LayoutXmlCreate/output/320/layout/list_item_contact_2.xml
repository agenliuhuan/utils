<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/comm_activity_background" android:orientation="vertical">  
  <TextView android:id="@+id/sectionTextView" android:layout_width="match_parent" android:layout_height="25px" android:background="#e2e2e2" android:gravity="center_vertical" android:paddingLeft="30px" android:textColor="#595959" android:textSize="16sp" android:textStyle="bold" android:visibility="gone"/>  
  <LinearLayout android:layout_width="match_parent" android:layout_height="54px" android:background="@color/white" android:gravity="center_vertical" android:orientation="horizontal"> 
    <TextView android:id="@+id/txt_contacts_list_item_name" android:layout_width="0px" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_marginLeft="30px" android:layout_weight="1" android:ellipsize="start" android:singleLine="true" android:textColor="#595959" android:textSize="16sp"/>  
    <TextView android:id="@+id/txt_contact_list_item_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="53px" android:textColor="#595959" android:textSize="14sp"/> 
  </LinearLayout> 
</LinearLayout>
