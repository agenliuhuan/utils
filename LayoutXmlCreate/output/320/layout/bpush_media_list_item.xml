<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="62px" android:orientation="horizontal">  
  <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/bpush_list_item_bg" android:orientation="horizontal"> 
    <ImageView android:id="@+id/bpush_media_list_img" android:layout_width="35px" android:layout_height="35px" android:layout_gravity="center_vertical" android:paddingLeft="2px"/>  
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:paddingLeft="10px">  
      <TextView android:id="@+id/bpush_media_list_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7px" android:ellipsize="end" android:singleLine="true" android:textColor="#000000" android:textSize="14px"/>  
      <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginBottom="7px" android:orientation="horizontal">  
        <TextView android:id="@+id/bpush_media_list_from_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:ellipsize="end" android:singleLine="true" android:textColor="#000000" android:textSize="8px"/>  
        <TextView android:id="@+id/bpush_media_list_time_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:ellipsize="end" android:paddingRight="4px" android:singleLine="true" android:textColor="#000000" android:textSize="8px"/> 
      </RelativeLayout> 
    </LinearLayout> 
  </LinearLayout> 
</LinearLayout>
