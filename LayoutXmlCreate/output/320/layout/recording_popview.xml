<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">  
  <RelativeLayout android:layout_width="119px" android:layout_height="124px" android:layout_centerInParent="true" android:background="@drawable/loading_background" android:gravity="center"> 
    <ImageView android:id="@+id/img_recording_tip" android:layout_width="31px" android:layout_height="45px" android:layout_centerHorizontal="true" android:background="@anim/icon_recording_anim" android:layout_marginTop="17px"/>  
    <TextView android:id="@+id/txt_recording_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/img_recording_tip" android:layout_centerHorizontal="true" android:layout_marginTop="17px" android:text="@string/recording_popviewTV" android:textColor="#ffffff" android:textSize="12sp"/>  
    <TextView android:id="@+id/txt_recording_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/txt_recording_tip" android:layout_centerHorizontal="true" android:layout_marginTop="2px" android:text="120'" android:textColor="#ffffff" android:textSize="10sp" android:visibility="invisible"/> 
  </RelativeLayout> 
</RelativeLayout>
