<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/comm_activity_background" android:orientation="vertical">  
  <include android:id="@+id/titlebar_escort" layout="@layout/comm_title_bar"/>  
  <FrameLayout android:id="@+id/escort_frameLayoutmap" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/titlebar_escort"/>  
  <RelativeLayout android:id="@+id/escort_infoRL" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/titlebar_escort" android:background="@drawable/escort_infobg" android:paddingBottom="8px" android:paddingTop="4px"> 
    <Button android:id="@+id/escort_arriveBtn" android:layout_width="56px" android:layout_height="27px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="15px" android:background="@drawable/btn_blue_selector" android:gravity="center" android:text="@string/activity_escort_arriveBtn" android:textColor="#ffffff" android:textSize="16sp"/>  
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/escort_arriveBtn" android:orientation="vertical"> 
      <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="9px" android:layout_marginTop="4px" android:orientation="horizontal"> 
        <TextView android:id="@+id/escort_info_locationTipTV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_escort_position" android:textColor="#333333" android:textSize="12sp"/>  
        <TextView android:id="@+id/escort_info_locationTV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_escort_wu" android:textColor="#009fcc" android:textSize="12sp"/> 
      </LinearLayout>  
      <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="9px" android:layout_marginTop="2px" android:orientation="horizontal"> 
        <TextView android:id="@+id/escort_info_arriveTipTV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_escort_arrive" android:textColor="#333333" android:textSize="12sp"/>  
        <TextView android:id="@+id/escort_info_arriveTV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_escort_wu" android:textColor="#009fcc" android:textSize="12sp"/> 
      </LinearLayout>  
      <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2px"> 
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9px" android:orientation="horizontal"> 
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_escort_pass" android:textColor="#333333" android:textSize="12sp"/>  
          <TextView android:id="@+id/escort_info_passTV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_escort_wu" android:textColor="#009fcc" android:textSize="12sp"/> 
        </LinearLayout>  
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="153px" android:orientation="horizontal"> 
          <TextView android:id="@+id/escort_info_powerTipTV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_escort_power" android:textColor="#333333" android:textSize="12sp"/>  
          <TextView android:id="@+id/escort_info_powerTV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_escort_wu" android:textColor="#11b300" android:textSize="12sp"/> 
        </LinearLayout> 
      </RelativeLayout>  
      <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2px" android:orientation="horizontal" android:visibility="gone"> 
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9px" android:orientation="horizontal"> 
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_escort_overplus" android:textColor="#333333" android:textSize="12sp"/>  
          <TextView android:id="@+id/escort_info_overTV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_escort_wu" android:textColor="#009fcc" android:textSize="12sp"/> 
        </LinearLayout>  
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="153px" android:orientation="horizontal"> 
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_escort_familynum" android:textColor="#333333" android:textSize="12sp"/>  
          <TextView android:id="@+id/escort_info_familynumTV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/activity_escort_wu" android:textColor="#009fcc" android:textSize="12sp"/> 
        </LinearLayout> 
      </RelativeLayout> 
    </LinearLayout> 
  </RelativeLayout>  
  <RelativeLayout android:id="@+id/escort_bottomRL" android:layout_width="match_parent" android:layout_height="51px" android:layout_alignParentBottom="true" android:background="#ffffff" android:visibility="invisible"> 
    <RelativeLayout android:id="@+id/escort_ChatRL" android:layout_width="109px" android:layout_height="match_parent" android:layout_alignParentRight="true"> 
      <LinearLayout android:id="@+id/escort_ChatLL" android:layout_width="109px" android:layout_height="match_parent" android:layout_alignParentRight="true" android:background="@drawable/mainfragment_bottomllbg" android:gravity="center" android:orientation="horizontal"> 
        <ImageView android:layout_width="31px" android:layout_height="31px" android:background="@drawable/mainfragment_bottomchatimg_selector"/>  
        <TextView android:id="@+id/txt_escort_chat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8px" android:text="@string/mainfragment_chatTV" android:textColor="@drawable/mainfragment_bottomtextselector" android:textSize="20sp"/> 
      </LinearLayout>  
      <TextView android:id="@+id/txt_escort_msg_count" android:layout_width="16px" android:layout_height="16px" android:layout_alignParentRight="true" android:layout_alignParentTop="true" android:layout_marginRight="5px" android:layout_marginTop="5px" android:background="@drawable/icon_menu_red_point" android:gravity="center" android:textColor="#ffffff" android:textSize="11sp" android:visibility="gone"/> 
    </RelativeLayout>  
    <View android:layout_width="0px" android:layout_height="match_parent" android:layout_toLeftOf="@+id/escort_ChatRL" android:background="#cccccc"/>  
    <HorizontalScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@+id/escort_ChatRL" android:fadingEdge="none" android:scrollbars="none"> 
      <LinearLayout android:id="@+id/escort_familiesGridLL" android:layout_width="fill_parent" android:layout_height="match_parent" android:orientation="horizontal"> 
        <GridView android:id="@+id/escort_familiesGrid" android:layout_width="fill_parent" android:layout_height="match_parent"></GridView> 
      </LinearLayout> 
    </HorizontalScrollView> 
  </RelativeLayout>  
  <Button android:id="@+id/escort_myLocationBtn" android:layout_width="29px" android:layout_height="29px" android:layout_above="@+id/escort_bottomRL" android:layout_alignParentRight="true" android:layout_marginBottom="18px" android:layout_marginRight="13px" android:background="@drawable/icon_mylocation"/>  
  <RelativeLayout android:id="@+id/escort_chatRL" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/titlebar_escort" android:background="@color/chatrl_transparent_background" android:visibility="gone"> 
    <RelativeLayout android:id="@+id/escort_chatTopRL" android:layout_width="match_parent" android:layout_height="34px"> 
      <TextView android:id="@+id/escort_chatTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:textColor="#595959" android:textSize="12sp"/>  
      <Button android:id="@+id/escort_chatRLColseBtn" android:layout_width="29px" android:layout_height="29px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="5px" android:background="@drawable/icon_chatclose"/> 
    </RelativeLayout>  
    <RelativeLayout android:id="@+id/escort_chatinputRL" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:background="#ffffff" android:focusable="true" android:focusableInTouchMode="true"> 
      <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:fillViewport="true"> 
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"> 
          <RelativeLayout android:id="@+id/escort_chatinputtextRL" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="43px"> 
            <Button android:id="@+id/escort_chatinput_SendBtn" android:layout_width="49px" android:layout_height="27px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="9px" android:background="@drawable/mainchatinput_voice_selector" android:gravity="center" android:text="@string/mainfragment_ChatSendText" android:textColor="@drawable/chatinput_voicebtn_text_selector" android:textSize="16sp"/>  
            <RelativeLayout android:layout_width="160px" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginRight="8px" android:layout_toLeftOf="@+id/escort_chatinput_SendBtn"> 
              <EditText android:id="@+id/escort_chatinput_edit" android:layout_width="160px" android:layout_height="wrap_content" android:background="@drawable/main_chatinput_editbg" android:maxLines="3" android:minHeight="27px"/>  
              <Button android:id="@+id/escort_chatinput_voiceBtn" android:layout_width="160px" android:layout_height="27px" android:background="@drawable/mainchatinput_voice_selector" android:gravity="center" android:text="@string/mainfragment_ChatVoiceBtnText" android:textColor="@drawable/chatinput_voicebtn_text_selector" android:textSize="15sp" android:visibility="gone"/> 
            </RelativeLayout>  
            <Button android:id="@+id/escort_chatinput_ExpressionBtn" android:layout_width="32px" android:layout_height="32px" android:layout_centerVertical="true" android:layout_marginLeft="9px" android:background="@drawable/chatinput_express_selector"/>  
            <Button android:id="@+id/escort_chatinput_voicetextBtn" android:layout_width="32px" android:layout_height="32px" android:layout_centerVertical="true" android:layout_marginLeft="7px" android:layout_toRightOf="@+id/escort_chatinput_ExpressionBtn" android:background="@drawable/chatinput_voice_selector"/> 
          </RelativeLayout>  
          <!-- 表情图片 -->  
          <LinearLayout android:id="@+id/ll_face_container" android:layout_width="match_parent" android:layout_height="133px" android:layout_below="@+id/escort_chatinputtextRL" android:orientation="vertical" android:visibility="gone"> 
            <android.support.v4.view.ViewPager android:id="@+id/vPager" android:layout_width="match_parent" android:layout_height="wrap_content"/> 
          </LinearLayout> 
        </RelativeLayout> 
      </ScrollView> 
    </RelativeLayout>  
    <ListView android:id="@+id/escort_chatList" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/escort_chatinputRL" android:layout_below="@+id/escort_chatTopRL" android:background="#20000000" android:cacheColorHint="@android:color/transparent" android:divider="@color/transparent" android:dividerHeight="8px" android:headerDividersEnabled="true" android:listSelector="@color/transparent" android:scrollbarStyle="outsideOverlay" android:scrollbars="none" android:transcriptMode="normal"/> 
  </RelativeLayout>  
  <LinearLayout android:id="@+id/escort_popView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/escort_popllbg" android:gravity="center_horizontal" android:orientation="horizontal" android:paddingTop="2px" android:visibility="invisible"> 
    <Button android:id="@+id/escort_PosiBtn" android:layout_width="28px" android:layout_height="28px" android:background="@drawable/btn_escortposition_selector"/>  
    <Button android:id="@+id/escort_PhoneBtn" android:layout_width="28px" android:layout_height="28px" android:layout_marginLeft="6px" android:background="@drawable/btn_escortphone_selector"/> 
  </LinearLayout> 
</RelativeLayout>
