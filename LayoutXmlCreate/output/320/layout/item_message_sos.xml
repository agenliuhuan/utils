<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">  
  <TextView android:id="@+id/item_message_sos_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="8px" android:background="@drawable/message_date_bg" android:paddingBottom="2px" android:paddingLeft="8px" android:paddingRight="8px" android:paddingTop="2px" android:text="date" android:textColor="#333333" android:textSize="12sp"/>  
  <LinearLayout android:layout_width="304px" android:layout_height="176px" android:layout_gravity="center_horizontal" android:layout_marginTop="7px" android:background="@drawable/item_message_sos_contentbg" android:orientation="horizontal"> 
    <ImageView android:id="@+id/item_message_sos_user_img" android:layout_width="40px" android:layout_height="40px" android:layout_marginLeft="8px" android:layout_marginTop="6px" android:src="@drawable/icon_family"/>  
    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="6px" android:layout_marginBottom="6px" android:orientation="vertical"> 
      <TextView android:id="@+id/item_message_sos_contenttv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10px" android:text="content" android:textColor="#000000" android:textSize="12sp"/>  
      <ImageView android:id="@+id/item_message_sos_contentimg" android:layout_width="240px" android:layout_height="139px" android:layout_marginTop="4px" android:scaleType="center"/> 
    </LinearLayout> 
  </LinearLayout> 
</LinearLayout>
