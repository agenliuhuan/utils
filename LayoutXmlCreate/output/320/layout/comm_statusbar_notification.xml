<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/layout_dlna_notify" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:gravity="center_vertical" android:orientation="horizontal">  
  <ImageView android:layout_width="64px" android:layout_height="64px" android:layout_marginLeft="21px" android:layout_marginRight="21px" android:src="@drawable/ic_launcher"/>  
  <LinearLayout android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center_vertical|left" android:orientation="vertical"> 
    <TextView android:id="@+id/txt_notify_device" android:layout_width="match_parent" android:layout_height="42px" android:ellipsize="middle" android:gravity="bottom" android:singleLine="true" android:textSize="@dimen/font_size_16"/>  
    <TextView android:id="@+id/txt_notify_res_name" android:layout_width="match_parent" android:layout_height="42px" android:ellipsize="middle" android:gravity="top|left" android:paddingTop="3px" android:singleLine="true" android:textSize="@dimen/font_size_14"/> 
  </LinearLayout> 
</LinearLayout>
