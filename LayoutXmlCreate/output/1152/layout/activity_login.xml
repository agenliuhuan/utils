<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/comm_activity_background" android:orientation="vertical">  
  <include android:id="@+id/layout_title" layout="@layout/comm_title_bar"/>  
  <RelativeLayout android:layout_width="966px" android:layout_height="131px" android:layout_gravity="center_horizontal" android:layout_marginTop="96px"> 
    <EditText android:id="@+id/edt_login_phone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_gravity="center_horizontal" android:background="@drawable/edt_general_normal" android:hint="@string/activity_login_edt_phone" android:inputType="number" android:paddingLeft="204px" android:textColor="#333333" android:textColorHint="#bab9b9" android:textSize="15sp"> 
      <requestFocus/> 
    </EditText>  
    <RelativeLayout android:layout_width="163px" android:layout_height="match_parent"> 
      <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:text="@string/activity_login_phone" android:textColor="#888888" android:textSize="15sp"/>  
      <View android:layout_width="1px" android:layout_height="70px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:background="#949494"/> 
    </RelativeLayout> 
  </RelativeLayout>  
  <RelativeLayout android:layout_width="966px" android:layout_height="131px" android:layout_gravity="center_horizontal" android:layout_marginTop="32px"> 
    <EditText android:id="@+id/edt_login_password" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/edt_general_normal" android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ" android:hint="@string/activity_login_edt_password" android:inputType="textVisiblePassword" android:paddingLeft="204px" android:textColor="#333333" android:textColorHint="#bab9b9" android:textSize="15sp"/>  
    <RelativeLayout android:layout_width="163px" android:layout_height="match_parent"> 
      <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:text="@string/activity_login_password" android:textColor="#888888" android:textSize="15sp"/>  
      <View android:layout_width="1px" android:layout_height="70px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:background="#949494"/> 
    </RelativeLayout> 
  </RelativeLayout>  
  <TextView android:id="@+id/tv_login_fogot" android:layout_width="966px" android:layout_height="wrap_content" android:layout_gravity="center_horizontal|bottom" android:layout_marginTop="41px" android:gravity="center_vertical|right" android:text="@string/activity_login_tv_forgot" android:textColor="#0084ff" android:textSize="15sp"/>  
  <Button android:id="@+id/btn_login_login" android:layout_width="966px" android:layout_height="131px" android:layout_gravity="center_horizontal" android:layout_marginTop="80px" android:background="@drawable/btn_green_selector" android:text="@string/activity_login_btn_login" android:textColor="@color/white" android:textSize="@dimen/font_size_18"/> 
</LinearLayout>
