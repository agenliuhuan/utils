<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">  
  <TextView android:id="@+id/item_chat_date_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="19px" android:background="@drawable/message_date_bg" android:gravity="center" android:paddingBottom="16px" android:paddingLeft="48px" android:paddingRight="48px" android:paddingTop="16px" android:textColor="#595959" android:textSize="11sp"/>  
  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="32px" android:gravity="center_vertical" android:orientation="horizontal"> 
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="19px" android:gravity="center_horizontal" android:orientation="vertical"> 
      <ImageView android:id="@+id/item_chattovoice_userimg" android:layout_width="147px" android:layout_height="147px" android:src="@drawable/icon_family"/>  
      <TextView android:id="@+id/txt_chat_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6px" android:ellipsize="end" android:singleLine="true" android:textColor="#595959" android:textSize="12sp" android:visibility="gone"/> 
    </LinearLayout>  
    <RelativeLayout android:id="@+id/item_chatvoice_voiceRL" android:layout_width="185px" android:layout_height="108px" android:layout_gravity="center_vertical" android:layout_marginLeft="12px" android:background="@drawable/chat_from_bg"> 
      <ImageView android:id="@+id/item_chatvoice_voiceImg" android:layout_width="70px" android:layout_height="70px" android:layout_centerVertical="true" android:layout_marginLeft="32px" android:background="@drawable/chat_from_voice3"/> 
    </RelativeLayout>  
    <TextView android:id="@+id/item_chatvoice_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:layout_marginLeft="9px" android:textColor="#333333" android:textSize="12sp"/>  
    <ProgressBar android:id="@+id/pb_sending" android:layout_width="80px" android:layout_height="80px" android:layout_marginLeft="9px" android:visibility="visible"/> 
  </LinearLayout> 
</LinearLayout>
