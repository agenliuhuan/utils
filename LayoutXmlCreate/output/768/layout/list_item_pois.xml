<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/on_item_selected" android:orientation="vertical">  
  <RelativeLayout android:layout_width="match_parent" android:layout_height="260px" android:layout_marginBottom="21px" android:layout_marginLeft="40px" android:layout_marginRight="40px" android:layout_marginTop="44px" android:orientation="horizontal"> 
    <ImageView android:id="@+id/img_sos_pois_call" android:layout_width="78px" android:layout_height="78px" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:src="@drawable/sosnearby_phone"/>  
    <LinearLayout android:layout_width="381px" android:layout_height="match_parent" android:orientation="vertical"> 
      <TextView android:id="@+id/txt_sos_pois_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:text="南山科技园警务室" android:textColor="#333333" android:textSize="15sp"/>  
      <TextView android:id="@+id/txt_sos_pois_address" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25px" android:gravity="center_vertical" android:lines="3" android:text="广东省深圳市南山区高新科技园南十二路曙光大厦" android:textColor="#888888" android:textSize="12sp"/>  
      <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="23px" android:orientation="horizontal"> 
        <TextView android:id="@+id/txt_sos_pois_distance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="238米" android:textColor="#009fcc" android:textSize="12sp"/>  
        <TextView android:id="@+id/txt_sos_pois_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="46px" android:text="0755-86592534" android:textColor="#009fcc" android:textSize="15sp"/> 
      </LinearLayout> 
    </LinearLayout> 
  </RelativeLayout> 
</LinearLayout>
