<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="115px" android:layout_height="115px">  
  <RelativeLayout android:id="@+id/listitem_contactRL" android:layout_width="115px" android:layout_height="115px"> 
    <ImageView android:id="@+id/listitem_contact_img" android:layout_width="110px" android:layout_height="110px" android:layout_centerInParent="true" android:scaleType="fitXY"/>  
    <TextView android:id="@+id/listitem_contact_name" android:layout_width="match_parent" android:layout_height="42px" android:layout_alignParentBottom="true" android:background="@drawable/itemcontact_namebg" android:gravity="center" android:singleLine="true" android:textColor="#667769" android:textSize="12sp"/> 
  </RelativeLayout>  
  <ImageView android:id="@+id/listitem_contact_status_img" android:layout_width="25px" android:layout_height="25px" android:layout_centerVertical="true" android:src="@drawable/listitem_contactstatus_inline"/>  
  <ImageView android:id="@+id/listitem_contact_del_img" android:layout_width="39px" android:layout_height="39px" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:src="@drawable/listitem_contact_delbtn" android:visibility="gone"/>  
  <ImageView android:id="@+id/listitem_contact_escortImg" android:layout_width="115px" android:layout_height="115px" android:background="@drawable/mainfragment_isescorted" android:visibility="gone"/>  
  <TextView android:id="@+id/listitem_contact_msg_count" android:layout_width="39px" android:layout_height="39px" android:layout_alignParentRight="true" android:layout_alignParentTop="true" android:background="@drawable/icon_menu_red_point" android:gravity="center" android:textColor="#ffffff" android:textSize="11sp" android:visibility="gone"/> 
</RelativeLayout>
