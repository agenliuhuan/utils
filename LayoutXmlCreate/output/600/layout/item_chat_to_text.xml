<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">  
  <TextView android:id="@+id/item_chat_date_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="10px" android:background="@drawable/message_date_bg" android:gravity="center" android:paddingBottom="8px" android:paddingLeft="25px" android:paddingRight="25px" android:paddingTop="8px" android:textColor="#595959" android:textSize="11sp"/>  
  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:layout_marginTop="16px" android:gravity="center_vertical" android:orientation="horizontal"> 
    <LinearLayout android:id="@+id/layout_sending_pb" android:layout_width="0px" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_weight="1" android:gravity="right|center_vertical" android:orientation="vertical"> 
      <ProgressBar android:id="@+id/pb_sending" android:layout_width="41px" android:layout_height="41px" android:visibility="visible"/> 
    </LinearLayout>  
    <TextView android:id="@+id/item_chattotext_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginRight="6px" android:background="@drawable/chat_to_bg" android:gravity="center_vertical" android:maxWidth="350px" android:paddingLeft="25px" android:paddingRight="25px" android:textColor="#333333" android:textSize="15sp"/>  
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10px" android:gravity="center_horizontal" android:orientation="vertical"> 
      <ImageView android:id="@+id/item_chattotext_userimg" android:layout_width="76px" android:layout_height="76px" android:src="@drawable/icon_family"/>  
      <TextView android:id="@+id/txt_chat_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3px" android:ellipsize="end" android:singleLine="true" android:textColor="#595959" android:textSize="12sp" android:visibility="gone"/> 
    </LinearLayout> 
  </LinearLayout> 
</LinearLayout>
