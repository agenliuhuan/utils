<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="159px" android:layout_height="159px" android:orientation="vertical">  
  <RelativeLayout android:id="@+id/griditem_contactRL" android:layout_width="159px" android:layout_height="159px"> 
    <ImageView android:id="@+id/griditem_contact_img" android:layout_width="153px" android:layout_height="153px" android:layout_centerInParent="true" android:scaleType="center"/>  
    <TextView android:id="@+id/griditem_contact_name" android:layout_width="match_parent" android:layout_height="60px" android:layout_alignParentBottom="true" android:background="@drawable/itemcontact_namebg" android:gravity="center" android:singleLine="true" android:textColor="#667769" android:textSize="12sp"/>  
    <ImageView android:id="@+id/griditem_contact_exitimg" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true" android:background="@drawable/escort_family_exitbg" android:scaleType="fitXY" android:visibility="gone"/> 
  </RelativeLayout> 
</LinearLayout>
